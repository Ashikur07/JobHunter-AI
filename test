ржирж┐ржЪрзЗрж░ ржХрзЛржбржЯрж╛ ржкрзЗрж╕рзНржЯ ржХрж░рзЛ:

JavaScript
import { NextResponse } from "next/server";
import TelegramBot from "node-telegram-bot-api";
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import { extractJobData } from "@/lib/gemini";

const token = process.env.TELEGRAM_BOT_TOKEN;
const bot = new TelegramBot(token);

export async function POST(request) {
  try {
    const body = await request.json();
    
    // ржЯрзЗрж▓рж┐ржЧрзНрж░рж╛ржорзЗрж░ ржорзЗрж╕рзЗржЬ ржЪрзЗржХ ржХрж░рж╛
    if (body.message) {
      const { chat, text } = body.message;
      const chatId = chat.id;

      // рзз. ржЯрзЗржХрзНрж╕ржЯ ржмрж╛ рж▓рж┐ржВржХ рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛
      if (text) {
        // ржЗржЙржЬрж╛рж░ржХрзЗ ржмрж▓рж┐ ржЕржкрзЗржХрзНрж╖рж╛ ржХрж░рждрзЗ
        await bot.sendMessage(chatId, "ЁЯФО Analyzing your job link/text... Please wait.");

        let jobData;
        // ржЪрзЗржХ ржХрж░рж┐ ржПржЯрж╛ рж▓рж┐ржВржХ ржХрж┐ржирж╛
        if (text.startsWith("http")) {
          jobData = await extractJobData({ url: text });
        } else {
          jobData = await extractJobData({ text: text });
        }

        if (jobData) {
          // рзи. ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ рж╕рзЗржн ржХрж░рж╛ (Telegram ID рж╕рж╣)
          await dbConnect();
          
          // ржлрж┐ржЙржЪрж╛рж░ ржкрзНрж▓рзНржпрж╛ржирзЗрж░ ржЬржирзНржп telegramId рж╕рзЗржн рж░рж╛ржЦржЫрж┐
          const newJob = await Job.create({
            ...jobData,
            platform: "Telegram Bot",
            // userEmail: "future@email.com" (ржкрж░рзЗ ржПржЦрж╛ржирзЗ рж░рж┐рзЯрзЗрж▓ ржЗржорзЗржЗрж▓ ржЖрж╕ржмрзЗ)
            // telegramId: chatId (рждрзБржорж┐ ржЪрж╛ржЗрж▓рзЗ ржоржбрзЗрж▓рзЗ ржПржЗ ржлрж┐рж▓рзНржб ржЕрзНржпрж╛ржб ржХрж░рждрзЗ ржкрж╛рж░рзЛ)
          });

          // рзй. рж╕рж╛ржХрж╕рзЗрж╕ ржорзЗрж╕рзЗржЬ
          const reply = `тЬЕ **Job Saved Successfully!**\n\nЁЯУМ **Title:** ${newJob.title}\nЁЯПв **Company:** ${newJob.company}\nЁЯТ░ **Salary:** ${newJob.salary || "N/A"}\n\nCheck your dashboard!`;
          await bot.sendMessage(chatId, reply, { parse_mode: "Markdown" });
        }
      } else {
        await bot.sendMessage(chatId, "Send me a Job Link or Description Text!");
      }
    }

    return NextResponse.json({ success: true });
  } catch (error) {
    console.error("Telegram Error:", error);
    return NextResponse.json({ error: error.message }, { status: 500 });
  }
}
