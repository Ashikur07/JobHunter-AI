JavaScript
import Navbar from "@/components/Navbar";
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import User from "@/models/User";
import Link from "next/link";
import { MapPin, Calendar, DollarSign, Building, User as UserIcon, Mail, Linkedin, Github } from "lucide-react";

// рж╕рж╛рж░рзНржнрж╛рж░ рж╕рж╛ржЗржбрзЗ ржбрж╛ржЯрж╛ ржлрзЗржЪ ржХрж░рж╛
async function getJobDetails(id) {
  await dbConnect();
  const job = await Job.findById(id).lean();
  if (!job) return null;

  // ржЗржЙржЬрж╛рж░рзЗрж░ ржбрж┐ржЯрзЗржЗрж▓рж╕ ржЖржирж╛
  const user = await User.findOne({ email: job.userEmail }).lean();
  return { ...job, applicant: user };
}

export default async function JobDetailsPage({ params }) {
  const { id } = await params; // Next.js 15 fix
  const job = await getJobDetails(id);

  if (!job) return <div className="text-center text-white py-20">Job not found!</div>;

  return (
    <div className="min-h-screen bg-[#0f172a] text-white font-sans">
      <Navbar />

      <div className="max-w-6xl mx-auto pt-32 pb-20 px-6 grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        {/* --- ржмрж╛ржо ржкрж╛рж╢: ржЬржм ржбрж┐ржЯрзЗржЗрж▓рж╕ --- */}
        <div className="lg:col-span-2 space-y-6">
          <div className="bg-gray-800/50 border border-gray-700 p-8 rounded-2xl">
            <div className="flex items-start justify-between mb-6">
              <div>
                <h1 className="text-3xl font-bold text-white mb-2">{job.title}</h1>
                <div className="flex items-center gap-2 text-xl text-blue-400 font-medium">
                  <Building size={20}/> {job.company}
                </div>
              </div>
              <span className="bg-blue-500/10 text-blue-400 px-4 py-2 rounded-full text-sm font-bold border border-blue-500/20">
                {job.status}
              </span>
            </div>

            <div className="grid grid-cols-2 gap-4 mb-8">
              <div className="flex items-center gap-2 text-gray-300 bg-gray-900/50 p-3 rounded-lg">
                <MapPin size={18} className="text-gray-500"/> {job.location || "Remote"}
              </div>
              <div className="flex items-center gap-2 text-gray-300 bg-gray-900/50 p-3 rounded-lg">
                <DollarSign size={18} className="text-green-500"/> {job.salary || "Negotiable"}
              </div>
              <div className="flex items-center gap-2 text-gray-300 bg-gray-900/50 p-3 rounded-lg">
                <Calendar size={18} className="text-purple-500"/> Applied: {new Date(job.applicationDate).toLocaleDateString()}
              </div>
            </div>

            <h3 className="text-lg font-bold text-white mb-3 border-b border-gray-700 pb-2">Job Description / Summary</h3>
            <p className="text-gray-400 leading-relaxed whitespace-pre-wrap">
              {job.description || "No description provided."}
            </p>

            {job.postLink && (
              <a href={job.postLink} target="_blank" className="mt-8 inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl font-bold transition">
                View Original Job Post тЖЧ
              </a>
            )}
          </div>
        </div>

        {/* --- ржбрж╛ржи ржкрж╛рж╢: ржЕрзНржпрж╛ржкрзНрж▓рж┐ржХрзНржпрж╛ржирзНржЯ ржкрзНрж░рзЛржлрж╛ржЗрж▓ --- */}
        <div className="lg:col-span-1">
          <div className="bg-gray-800/50 border border-gray-700 p-6 rounded-2xl sticky top-24">
            <h3 className="text-sm font-bold text-gray-500 uppercase mb-4">Tracked By</h3>
            
            <div className="flex flex-col items-center text-center">
              <div className="relative mb-4">
                <img 
                  src={job.applicant?.image || "https://via.placeholder.com/100"} 
                  alt="User" 
                  className="w-24 h-24 rounded-full border-4 border-gray-700 object-cover"
                />
                <div className="absolute bottom-1 right-1 bg-green-500 w-4 h-4 rounded-full border-2 border-gray-800"></div>
              </div>
              
              <h2 className="text-2xl font-bold text-white">{job.applicant?.name}</h2>
              <p className="text-gray-400 text-sm mb-6">{job.applicant?.bio || "Tech Enthusiast & Job Hunter"}</p>

              {/* Social / Contact Links */}
              <div className="w-full space-y-3">
                {job.applicant?.links?.linkedin && (
                  <a href={job.applicant.links.linkedin} target="_blank" className="flex items-center justify-center gap-2 w-full bg-blue-700/20 hover:bg-blue-700/40 text-blue-400 py-2 rounded-lg transition">
                    <Linkedin size={18}/> LinkedIn Profile
                  </a>
                )}
                {job.applicant?.links?.github && (
                  <a href={job.applicant.links.github} target="_blank" className="flex items-center justify-center gap-2 w-full bg-gray-700/50 hover:bg-gray-700 text-white py-2 rounded-lg transition">
                    <Github size={18}/> GitHub Profile
                  </a>
                )}
                <button className="flex items-center justify-center gap-2 w-full border border-gray-600 hover:bg-gray-700 text-gray-300 py-2 rounded-lg transition">
                  <Mail size={18}/> Send Message
                </button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  );
}
