JavaScript
// GET Jobs (Public vs Private)
export async function GET(request) {
  await dbConnect();
  const { searchParams } = new URL(request.url);
  const type = searchParams.get('type');

  // ржПржЗ ржЕржВрж╢ржЯрж╛ ржЖржЫрзЗ ржХрж┐ржирж╛ ржЪрзЗржХ ржХрж░рзЛ ЁЯСЗ
  if (type === 'public') {
    // рж░рж┐рж╕рзЗржирзНржЯ рззрзжржЯрж╛ ржЬржм ржЖржиржЫрж┐, ржХрж┐ржирзНрждрзБ ржХрж╛рж░ ржЗржорзЗржЗрж▓ рж╕рзЗржЯрж╛ ржЧрзЛржкржи рж░рж╛ржЦржЫрж┐
    const jobs = await Job.find().sort({ createdAt: -1 }).limit(6).select('title company location createdAt');
    return NextResponse.json({ success: true, data: jobs });
  }
  // ... ржмрж╛ржХрж┐ ржХрзЛржб (ржкрзНрж░рж╛ржЗржнрзЗржЯ ржЬржмрзЗрж░ ржЬржирзНржп)
