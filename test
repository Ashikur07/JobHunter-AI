import Navbar from "@/components/Navbar";
import Link from "next/link";

// ржбрж╛ржЯрж╛ ржирж┐рзЯрзЗ ржЖрж╕рж╛рж░ ржлрж╛ржВрж╢ржи (Server Side Fetching)
async function getRecentJobs() {
  try {
    // рж▓рж╛ржЗржн рж╕рж╛ржЗржЯ ржмрж╛ рж▓рзЛржХрж╛рж▓рж╣рзЛрж╕рзНржЯрзЗрж░ рж▓рж┐ржВржХ ржбрж╛ржЗржирж╛ржорж┐ржХрж╛рж▓рж┐ рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛ ржнрж╛рж▓рзЛ
    // рждржмрзЗ ржПржЦрж╛ржирзЗ ржЖржорж░рж╛ рж╕рж░рж╛рж╕рж░рж┐ API ржХрж▓ ржХрж░ржЫрж┐
    const res = await fetch(`${process.env.NEXTAUTH_URL}/api/jobs?type=public`, { 
      cache: 'no-store' // ржкрзНрж░рждрж┐ржмрж╛рж░ ржирждрзБржи ржбрж╛ржЯрж╛ ржжрзЗржЦрж╛ржмрзЗ
    });
    
    if (!res.ok) return [];
    const data = await res.json();
    return data.data || [];
  } catch (error) {
    console.error("Error fetching public jobs:", error);
    return []; // ржПрж░рж░ рж╣рж▓рзЗ ржЦрж╛рж▓рж┐ ржЕрзНржпрж╛рж░рзЗ рж░рж┐ржЯрж╛рж░рзНржи ржХрж░ржмрзЗ, ржХрзНрж░рзНржпрж╛рж╢ ржХрж░ржмрзЗ ржирж╛
  }
}

export default async function LandingPage() {
  const recentJobs = await getRecentJobs();

  return (
    <div className="min-h-screen bg-gray-900 text-white font-sans">
      
      {/* 1. Navbar */}
      <Navbar />
      
      {/* 2. Hero Section (Banner) */}
      <div className="relative isolate px-6 pt-14 lg:px-8">
        <div className="mx-auto max-w-4xl py-32 sm:py-48 lg:py-24 text-center">
          <div className="mb-8 flex justify-center">
            <div className="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-400 ring-1 ring-white/10 hover:ring-white/20">
              New: Save jobs via Telegram Bot! ЁЯдЦ
            </div>
          </div>
          <h1 className="text-4xl font-bold tracking-tight text-white sm:text-6xl bg-gradient-to-r from-blue-400 via-purple-500 to-indigo-500 bg-clip-text text-transparent">
            Track Your Job Hunt Like a Pro
          </h1>
          <p className="mt-6 text-lg leading-8 text-gray-300">
            Stop using messy spreadsheets. Automate your job tracking with AI. 
            Save jobs from LinkedIn, BDJobs, and more with just one click or a screenshot.
          </p>
          <div className="mt-10 flex items-center justify-center gap-x-6">
            <Link href="/dashboard">
              <button className="rounded-md bg-blue-600 px-6 py-3.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all transform hover:scale-105">
                Start Tracking For Free ЁЯЪА
              </button>
            </Link>
            <Link href="/about" className="text-sm font-semibold leading-6 text-white hover:text-blue-400 transition">
              Learn more <span aria-hidden="true">тЖТ</span>
            </Link>
          </div>
        </div>
      </div>

      {/* 3. Recent Jobs Section (Community Data) */}
      <div className="bg-gray-800/50 py-24 sm:py-32 border-t border-gray-700">
        <div className="mx-auto max-w-7xl px-6 lg:px-8">
          <div className="mx-auto max-w-2xl text-center">
            <h2 className="text-3xl font-bold tracking-tight text-white sm:text-4xl">Recent Applications</h2>
            <p className="mt-2 text-lg leading-8 text-gray-400">
              See what jobs others are applying to right now.
            </p>
          </div>
          
          {/* Jobs Grid */}
          <div className="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            {recentJobs.length > 0 ? (
              recentJobs.map((job) => (
                <div key={job._id} className="flex max-w-xl flex-col items-start justify-between bg-gray-900 p-6 rounded-2xl border border-gray-700 hover:border-blue-500 transition shadow-lg">
                  <div className="flex items-center gap-x-4 text-xs">
                    <time dateTime={job.createdAt} className="text-gray-500">
                      {new Date(job.createdAt).toLocaleDateString()}
                    </time>
                    <span className="relative z-10 rounded-full bg-gray-800 px-3 py-1.5 font-medium text-gray-400 hover:bg-gray-700">
                      {job.location || "Remote"}
                    </span>
                  </div>
                  <div className="group relative">
                    <h3 className="mt-3 text-lg font-semibold leading-6 text-white group-hover:text-gray-300">
                      <span className="absolute inset-0" />
                      {job.title}
                    </h3>
                    <p className="mt-2 line-clamp-1 text-sm leading-6 text-blue-400 font-bold">
                      {job.company}
                    </p>
                  </div>
                </div>
              ))
            ) : (
              <div className="col-span-3 text-center text-gray-500">
                <p>No public jobs found yet. Be the first to track!</p>
              </div>
            )}
          </div>
        </div>
      </div>

    </div>
  );
}
