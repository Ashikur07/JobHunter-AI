рждрзЛржорж╛рж░ src/app/api/auth/[...nextauth]/route.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ржЯрж╛ ржжрж╛ржУ:

JavaScript
import NextAuth from "next-auth";
import GoogleProvider from "next-auth/providers/google";
import dbConnect from "@/lib/mongodb";
import User from "@/models/User";

// тЪая╕П ржлрж┐ржХрзНрж╕: authOptions ржХрзЗ ржЖрж▓рж╛ржжрж╛ ржХрж░рзЗ export ржХрж░ржЫрж┐ ржпрж╛рждрзЗ ржЕржирзНржп ржлрж╛ржЗрж▓ ржерзЗржХрзЗ ржкрж╛ржУрзЯрж╛ ржпрж╛рзЯ
export const authOptions = {
  providers: [
    GoogleProvider({
      clientId: process.env.GOOGLE_CLIENT_ID,
      clientSecret: process.env.GOOGLE_CLIENT_SECRET,
    }),
  ],
  secret: process.env.NEXTAUTH_SECRET,
  pages: {
    signIn: '/auth/signin',
  },
  callbacks: {
    async signIn({ user }) {
      await dbConnect();
      const existingUser = await User.findOne({ email: user.email });
      if (!existingUser) {
        await User.create({
          name: user.name,
          email: user.email,
          image: user.image,
        });
      }
      return true;
    },
    async session({ session }) {
      return session;
    },
  },
};

const handler = NextAuth(authOptions);

export { handler as GET, handler as POST };
