ржкрж░рж┐ржмрж░рзНрждржи: ржЖржорж┐ ржПржЦрж╛ржирзЗ gemini-1.5-flash ржмрзНржпржмрж╣рж╛рж░ ржХрж░рзЗржЫрж┐ (ржПржЯрж╛ ржмрзЗрж╢рж┐ рж╕рзНржЯрзЗржмрж▓) ржПржмржВ try-catch ржмрзНрж▓ржХ рж╢ржХрзНржд ржХрж░рзЗржЫрж┐ред

JavaScript
import { GoogleGenerativeAI } from "@google/generative-ai";

const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

export async function extractJobData({ text, image, url }) {
  try {
    // ржлрж┐ржХрзНрж╕: 1.5-flash ржоржбрзЗрж▓ ржмрзНржпржмрж╣рж╛рж░ ржХрж░ржЫрж┐, ржПржЯрж╛ Vercel-ржП ржмрзЗрж╢рж┐ рж╕рзНржЯрзЗржмрж▓
    const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash" });

    let promptParts = [
      `Extract job details and return ONLY a JSON object. No Markdown.
       Fields: title, company, location, salary, description (max 2 sentences).
       If missing, set to null.`
    ];

    if (url) {
      if (!process.env.ZENROWS_API_KEY) {
        // ZenRows ржХрж┐ ржирж╛ ржерж╛ржХрж▓рзЗ рж╢рзБржзрзБ рж▓рж┐ржВржХржЯрж╛ рж╕рзЗржн ржХрж░рж╛рж░ ржмрзНржпржмрж╕рзНржерж╛
        console.warn("ZenRows API Key missing. Skipping HTML fetch.");
        return { 
          title: "Job Link (Pending Analysis)", 
          company: "Unknown", 
          postLink: url,
          description: "Could not fetch details. Please check API Keys.",
          platform: "Web Link"
        };
      }
      
      const proxyUrl = `https://api.zenrows.com/v1/?apikey=${process.env.ZENROWS_API_KEY}&url=${encodeURIComponent(url)}&js_render=true`;
      const response = await fetch(proxyUrl);
      if (response.ok) {
        const html = await response.text();
        promptParts.push(`HTML Content: ${html}`);
      }
    } 
    else if (image) {
      const base64Data = image.includes("base64,") ? image.split(",")[1] : image;
      promptParts.push({ inlineData: { data: base64Data, mimeType: "image/png" } });
    } 
    else if (text) {
      promptParts.push(text);
    }

    // AI Request
    const result = await model.generateContent(promptParts);
    const response = await result.response;
    let outputText = response.text();

    // Clean JSON
    outputText = outputText.replace(/```json/g, "").replace(/```/g, "").trim();
    
    // ржЪрзЗрж╕рзНржЯрж╛ ржХрж░рж┐ ржкрж╛рж░рзНрж╕ ржХрж░рж╛рж░
    try {
      const data = JSON.parse(outputText);
      
      // Platform Logic
      if (url) {
        data.postLink = url;
        if(url.includes('linkedin')) data.platform = 'LinkedIn';
        else if(url.includes('bdjobs')) data.platform = 'BDJobs';
        else data.platform = 'Web';
      } else {
        data.platform = image ? 'Screenshot' : 'Telegram Text';
      }
      return data;

    } catch (parseError) {
      console.error("JSON Parse Error:", parseError);
      // ржпржжрж┐ AI ржЙрж▓рзНржЯрж╛ржкрж╛рж▓рзНржЯрж╛ ржжрзЗрзЯ, рждрж╛ржУ ржЖржорж░рж╛ ржХрзНрж░рзНржпрж╛рж╢ ржХрж░ржм ржирж╛
      return {
        title: "Extracted Job (Needs Edit)",
        company: "Unknown",
        description: text ? text.substring(0, 100) : "Failed to parse AI response",
        platform: "Error Fallback"
      };
    }

  } catch (error) {
    console.error("Gemini API Error:", error);
    // ржпржжрж┐ ржПржХржжржоржЗ ржХрж┐ржЫрзБ ржирж╛ рж╣рзЯ, ржмрзЗрж╕рж┐ржХ ржбрж╛ржЯрж╛ рж░рж┐ржЯрж╛рж░рзНржи ржХрж░ржм
    return {
      title: "Job from Telegram",
      company: "Check Manually",
      description: text || "AI processing failed.",
      platform: "System Error"
    };
  }
}
тЪая╕П ржХрж╛ржЬ рж╢рзЗрж╖ ржХрж░рж╛рж░ ржкрж░: рзз. ржХрзЛржб рж╕рзЗржн ржХрж░рзЛред рзи. Vercel-ржП ржЧрж┐рзЯрзЗ Redeploy ржжрж╛ржУ (ржПржЯрж╛ ржжрж┐рждрзЗржЗ рж╣ржмрзЗ)ред рзй. Vercel-ржПрж░ Settings > Environment Variables-ржП ржЧрж┐рзЯрзЗ ржЪрзЗржХ ржХрж░рзЛ GEMINI_API_KEY ржарж┐ржХ ржЖржЫрзЗ ржХрж┐ржирж╛ред

