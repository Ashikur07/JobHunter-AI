JavaScript
"use client";
import { useState, useEffect } from "react";
import { useSession } from "next-auth/react";
import Navbar from "@/components/Navbar";
import JobInputForm from "@/components/JobInputForm";
import JobTable from "@/components/JobTable";
import JobModal from "@/components/JobModal";
import DashboardStats from "@/components/DashboardStats";
import UserProfile from "@/components/UserProfile";

export default function Dashboard() {
  const { data: session } = useSession();
  const [jobs, setJobs] = useState([]);
  const [selectedJob, setSelectedJob] = useState(null);
  const [activeTab, setActiveTab] = useState("tracker"); // 'tracker' or 'profile'

  // ржбрж╛ржЯрж╛ рж▓рзЛржб ржХрж░рж╛
  const fetchJobs = async () => {
    try {
      const res = await fetch("/api/jobs");
      const data = await res.json();
      if (data.success) setJobs(data.data);
    } catch (error) { console.error(error); }
  };

  useEffect(() => { fetchJobs(); }, []);

  return (
    <div className="min-h-screen bg-gray-900 font-sans text-white">
      <Navbar />
      
      <main className="pt-24 px-4 max-w-7xl mx-auto pb-10">
        
        {/* --- TAB BUTTONS --- */}
        <div className="flex justify-center mb-8">
          <div className="bg-gray-800 p-1 rounded-full border border-gray-700 inline-flex">
            <button 
              onClick={() => setActiveTab("tracker")}
              className={`px-6 py-2 rounded-full text-sm font-bold transition ${activeTab === "tracker" ? "bg-blue-600 text-white shadow-lg" : "text-gray-400 hover:text-white"}`}
            >
              ЁЯУК Job Tracker
            </button>
            <button 
              onClick={() => setActiveTab("profile")}
              className={`px-6 py-2 rounded-full text-sm font-bold transition ${activeTab === "profile" ? "bg-purple-600 text-white shadow-lg" : "text-gray-400 hover:text-white"}`}
            >
              ЁЯСд My Profile
            </button>
          </div>
        </div>

        {/* --- TAB CONTENT --- */}
        {activeTab === "tracker" ? (
          <div className="animate-fadeIn">
            <DashboardStats jobs={jobs} />
            <JobInputForm onJobAdded={fetchJobs} />
            
            {/* Search Bar (Optional, already in Table if you merged logic, keeping simple here) */}
            
            <JobTable jobs={jobs} onViewDetails={setSelectedJob} />
          </div>
        ) : (
          <div className="animate-fadeIn">
            <UserProfile session={session} />
          </div>
        )}

      </main>

      {/* Modal stays outside tabs */}
      <JobModal job={selectedJob} onClose={() => setSelectedJob(null)} onUpdate={fetchJobs} />
    </div>
  );
}
