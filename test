ржзрж╛ржк рзи: рж▓рзЗржЖржЙржЯ ржЖржкржбрзЗржЯ (src/app/dashboard/layout.js) ЁЯЫая╕П
ржПржЦржи рждрзЛржорж╛рж░ рж╕рж╛ржЗржбржмрж╛рж░ рж▓рзЗржЖржЙржЯ ржлрж╛ржЗрж▓рзЗ ржЖржорж░рж╛ SweetAlert2 ржЗржирзНржЯрж┐ржЧрзНрж░рзЗржЯ ржХрж░ржмред

рждрзЛржорж╛рж░ src/app/dashboard/layout.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ржЯрж╛ ржкрзЗрж╕рзНржЯ ржХрж░рзЛред

JavaScript
"use client";
import Link from "next/link";
import { usePathname } from "next/navigation";
import { useSession, signOut } from "next-auth/react";
import { LayoutDashboard, PlusCircle, ListTodo, User, LogOut } from "lucide-react";
import Swal from "sweetalert2"; // SweetAlert ржЗржорзНржкрзЛрж░рзНржЯ

export default function DashboardLayout({ children }) {
  const pathname = usePathname();
  const { data: session } = useSession();

  const navItems = [
    { name: "Overview", href: "/dashboard", icon: LayoutDashboard },
    { name: "Add New Job", href: "/dashboard/add", icon: PlusCircle },
    { name: "My Applications", href: "/dashboard/jobs", icon: ListTodo },
    { name: "Profile", href: "/dashboard/profile", icon: User },
  ];

  // --- Logout Handler with SweetAlert2 ---
  const handleLogout = () => {
    Swal.fire({
      title: 'Are you sure?',
      text: "You will be logged out of your session.",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33', // рж▓рж╛рж▓ рж░ржЩ
      cancelButtonColor: '#3085d6', // ржирзАрж▓ рж░ржЩ
      confirmButtonText: 'Yes, Logout!',
      background: '#1f2937', // ржбрж╛рж░рзНржХ ржорзЛржб ржмрзНржпрж╛ржХржЧрзНрж░рж╛ржЙржирзНржб
      color: '#fff', // рж╕рж╛ржжрж╛ ржЯрзЗржХрзНрж╕ржЯ
      iconColor: '#f87171' // ржУрзЯрж╛рж░рзНржирж┐ржВ ржЖржЗржХржи ржХрж╛рж▓рж╛рж░
    }).then((result) => {
      if (result.isConfirmed) {
        signOut({ callbackUrl: "/" }); // ржХржиржлрж╛рж░рзНржо ржХрж░рж▓рзЗ рж▓ржЧ-ржЖржЙржЯ
      }
    })
  };

  return (
    <div className="flex min-h-screen bg-gray-900 text-white">
      
      {/* --- SIDEBAR --- */}
      <aside className="w-64 bg-gray-800 border-r border-gray-700 flex flex-col fixed h-full z-20">
        
        {/* Logo Area (Linked to Home) */}
        <div className="h-16 flex items-center px-6 border-b border-gray-700">
          <Link href="/" className="hover:opacity-80 transition">
            <h1 className="text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent cursor-pointer">
              JobHunter AI ЁЯХ╡я╕ПтАНтЩВя╕П
            </h1>
          </Link>
        </div>

        {/* Navigation Links */}
        <nav className="flex-1 px-4 py-6 space-y-2">
          {navItems.map((item) => {
            const isActive = pathname === item.href;
            return (
              <Link key={item.href} href={item.href}>
                <div className={`flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 ${
                  isActive 
                    ? "bg-blue-600 text-white shadow-lg shadow-blue-500/20" 
                    : "text-gray-400 hover:bg-gray-700 hover:text-white"
                }`}>
                  <item.icon size={20} />
                  <span className="font-medium text-sm">{item.name}</span>
                </div>
              </Link>
            );
          })}
        </nav>

        {/* User Profile & Logout (Bottom) */}
        <div className="p-4 border-t border-gray-700 bg-gray-800/50">
          <div className="flex items-center gap-3 p-2 rounded-lg transition group">
            
            {/* Profile Image */}
            <img 
              src={session?.user?.image || "https://via.placeholder.com/40"} 
              alt="User" 
              className="w-10 h-10 rounded-full border-2 border-blue-500 object-cover"
            />
            
            {/* Name & Email */}
            <div className="flex-1 overflow-hidden">
              <p className="text-sm font-bold text-white truncate">{session?.user?.name}</p>
              <p className="text-xs text-gray-400 truncate">{session?.user?.email}</p>
            </div>
            
            {/* Logout Button (with SweetAlert) */}
            <button 
              onClick={handleLogout} 
              className="text-gray-500 hover:text-red-400 hover:bg-gray-700 p-2 rounded-full transition"
              title="Logout"
            >
              <LogOut size={20} />
            </button>
          </div>
        </div>
      </aside>

      {/* --- MAIN CONTENT AREA --- */}
      <main className="flex-1 ml-64 p-8 bg-gray-900 overflow-y-auto">
        {children}
      </main>
    </div>
  );
}
