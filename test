"use client";
import { useSession, signIn, signOut } from "next-auth/react";

export default function Navbar({ totalJobs }) {
  const { data: session } = useSession(); // рж╕рзЗрж╢ржи ржЪрзЗржХ ржХрж░ржЫрж┐

  return (
    <nav className="fixed top-0 w-full bg-gray-900/80 backdrop-blur-md border-b border-gray-800 z-50">
      <div className="max-w-7xl mx-auto px-6 h-16 flex justify-between items-center">
        <h1 className="text-2xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent cursor-pointer">
          JobHunter AI ЁЯХ╡я╕ПтАНтЩВя╕П
        </h1>
        
        <div className="flex items-center gap-6">
          {session ? (
            // ржЗржЙржЬрж╛рж░ рж▓ржЧ-ржЗржи ржЕржмрж╕рзНржерж╛рзЯ ржерж╛ржХрж▓рзЗ
            <div className="flex items-center gap-4">
              <div className="text-right hidden md:block">
                <p className="text-sm text-white font-bold">{session.user.name}</p>
                <p className="text-xs text-gray-400">{session.user.email}</p>
              </div>
              <img 
                src={session.user.image} 
                alt="Profile" 
                className="w-9 h-9 rounded-full border border-gray-600"
              />
              <button 
                onClick={() => signOut()} 
                className="text-sm text-red-400 hover:text-red-300 font-semibold"
              >
                Logout
              </button>
            </div>
          ) : (
            // ржЗржЙржЬрж╛рж░ рж▓ржЧ-ржЖржЙржЯ ржЕржмрж╕рзНржерж╛рзЯ ржерж╛ржХрж▓рзЗ
            <button 
              onClick={() => signIn("google")} // ржЕржержмрж╛ "github"
              className="bg-white text-black px-4 py-2 rounded-lg text-sm font-bold hover:bg-gray-200 transition flex items-center gap-2"
            >
              Login with Google
            </button>
          )}
        </div>
      </div>
    </nav>
  );
}
