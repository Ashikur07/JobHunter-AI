"use client";
import { signIn } from "next-auth/react";
import { useState } from "react";

export default function SignIn() {
  const [loading, setLoading] = useState(false);

  const handleGoogleLogin = () => {
    setLoading(true);
    signIn("google", { callbackUrl: "/dashboard" }); // рж▓ржЧ-ржЗржи рж╢рзЗрж╖рзЗ ржбрзНржпрж╛рж╢ржмрзЛрж░рзНржбрзЗ ржкрж╛ржарж╛ржмрзЗ
  };

  return (
    <div className="min-h-screen flex items-center justify-center bg-gray-900 p-4">
      <div className="bg-white w-full max-w-md rounded-2xl shadow-2xl p-8">
        
        <div className="text-center mb-8">
          <h1 className="text-3xl font-bold text-gray-800">Welcome Back</h1>
          <p className="text-gray-500 text-sm mt-2">Sign in to your Job Hunter account</p>
        </div>

        {/* Google Button */}
        <button 
          onClick={handleGoogleLogin}
          disabled={loading}
          className="w-full flex items-center justify-center gap-3 border border-gray-300 py-3 rounded-lg hover:bg-gray-50 transition text-gray-700 font-semibold"
        >
          <img src="https://www.svgrepo.com/show/475656/google-color.svg" className="h-6 w-6" alt="Google" />
          {loading ? "Connecting..." : "Continue with Google"}
        </button>

        <div className="flex items-center my-6">
          <div className="flex-1 h-px bg-gray-300"></div>
          <span className="px-3 text-gray-400 text-sm">or</span>
          <div className="flex-1 h-px bg-gray-300"></div>
        </div>

        {/* Mock Email Form (Visual Only for now) */}
        <form className="space-y-4" onSubmit={(e) => e.preventDefault()}>
          <div>
            <label className="block text-gray-700 text-sm font-bold mb-1">Email Address</label>
            <input type="email" placeholder="Enter your email" className="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 text-gray-800" />
          </div>
          <div>
            <label className="block text-gray-700 text-sm font-bold mb-1">Password</label>
            <input type="password" placeholder="Enter password" className="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 text-gray-800" />
          </div>
          
          <button className="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg transition shadow-lg">
            Sign In
          </button>
        </form>

        <div className="mt-6 text-center">
          <a href="#" className="text-blue-600 text-sm hover:underline">Forgot your password?</a>
        </div>
      </div>
    </div>
  );
}
ржзрж╛ржк рзл: API ржЖржкржбрзЗржЯ (ржорж╛рж▓рж┐ржХрж╛ржирж╛ ржирж┐рж╢рзНржЪрж┐ржд ржХрж░рж╛) ЁЯФР
ржПржЦржи ржЖржорж╛ржжрзЗрж░ jobs API-ржХрзЗ ржмрж▓рждрзЗ рж╣ржмрзЗ: "ржнрж╛ржЗ, ржбрж╛ржЯрж╛ рж╕рзЗржн ржХрж░рж╛рж░ рж╕ржорзЯ ржЗржЙржЬрж╛рж░рзЗрж░ ржЗржорзЗржЗрж▓ржЯрж╛ржУ рж╕рзЗржн ржХрж░рзЛред"

рждрзЛржорж╛рж░ src/app/api/jobs/route.js ржЖржкржбрзЗржЯ ржХрж░рзЛ:

JavaScript
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import { NextResponse } from "next/server";
import { getServerSession } from "next-auth"; // рж╕рзЗрж╢ржи ржЪрзЗржХ ржХрж░рж╛рж░ ржЬржирзНржп
import { handler } from "../auth/[...nextauth]/route"; // Auth ржЕржкрж╢ржи

// GET Jobs (Public vs Private)
export async function GET(request) {
  await dbConnect();
  const { searchParams } = new URL(request.url);
  const type = searchParams.get('type');

  if (type === 'public') {
    // рж▓рзНржпрж╛ржирзНржбрж┐ржВ ржкрзЗржЬрзЗрж░ ржЬржирзНржп рж░рж┐рж╕рзЗржирзНржЯ рззрзжржЯрж╛ ржЬржм (рж╕ржмрж╛рж░)
    const jobs = await Job.find().sort({ createdAt: -1 }).limit(10).select('title company location createdAt');
    return NextResponse.json({ success: true, data: jobs });
  }

  // ржбрзНржпрж╛рж╢ржмрзЛрж░рзНржбрзЗрж░ ржЬржирзНржп (рж╢рзБржзрзБ рж▓ржЧ-ржЗржи ржХрж░рж╛ ржЗржЙржЬрж╛рж░рзЗрж░)
  const session = await getServerSession(handler);
  if (!session) {
    return NextResponse.json({ error: "Unauthorized" }, { status: 401 });
  }

  const jobs = await Job.find({ userEmail: session.user.email }).sort({ createdAt: -1 });
  return NextResponse.json({ success: true, data: jobs });
}

// POST Job (Save with User Email)
export async function POST(request) {
  try {
    const session = await getServerSession(handler);
    if (!session) {
      return NextResponse.json({ error: "Unauthorized" }, { status: 401 });
    }

    await dbConnect();
    const jobData = await request.json();
    
    // ржЗржЙржЬрж╛рж░рзЗрж░ ржЗржорзЗржЗрж▓ ржпрзЛржЧ ржХрж░ржЫрж┐
    const newJob = await Job.create({
      ...jobData,
      userEmail: session.user.email 
    });

    return NextResponse.json({ success: true, data: newJob }, { status: 201 });
  } catch (error) {
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}
ржзрж╛ржк рзм: рж▓рзНржпрж╛ржирзНржбрж┐ржВ ржкрзЗржЬ (Landing Page) ЁЯПа
ржПржЦржи src/app/page.js рж╣ржмрзЗ ржЖржорж╛ржжрзЗрж░ ржкрж╛ржмрж▓рж┐ржХ ржкрзЗржЬред ржПржЦрж╛ржи ржерзЗржХрзЗ ржбрзНржпрж╛рж╢ржмрзЛрж░рзНржб рж╕рж░рж┐рзЯрзЗ ржлрзЗрж▓ржмред

src/app/page.js (New):

JavaScript
import Navbar from "@/components/Navbar";
import Link from "next/link";

// ржкрж╛ржмрж▓рж┐ржХ ржЬржм ржирж┐рзЯрзЗ ржЖрж╕рж╛рж░ ржлрж╛ржВрж╢ржи
async function getPublicJobs() {
  try {
    const res = await fetch(`${process.env.NEXTAUTH_URL}/api/jobs?type=public`, { cache: 'no-store' });
    return (await res.json()).data || [];
  } catch (e) { return []; }
}

export default async function LandingPage() {
  const recentJobs = await getPublicJobs();

  return (
    <div className="min-h-screen bg-gray-900 text-white">
      <Navbar />
      
      {/* Hero Section */}
      <section className="pt-32 pb-20 px-6 text-center max-w-4xl mx-auto">
        <h1 className="text-5xl font-extrabold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent mb-6">
          Track Your Job Hunt Like a Pro ЁЯЪА
        </h1>
        <p className="text-xl text-gray-400 mb-10">
          Stop using spreadsheets. Automate your job tracking with AI. 
          Save jobs from LinkedIn, BDJobs, and more with one click.
        </p>
        <Link href="/dashboard">
          <button className="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-bold text-lg transition shadow-lg shadow-blue-500/30">
            Start Tracking Now тЮбя╕П
          </button>
        </Link>
      </section>

      {/* Recent Jobs Grid */}
      <section className="px-6 max-w-7xl mx-auto pb-20">
        <h2 className="text-2xl font-bold mb-8 border-l-4 border-blue-500 pl-4">
          Recent Applications by Community
        </h2>
        
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
          {recentJobs.map((job) => (
            <div key={job._id} className="bg-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition">
              <h3 className="font-bold text-lg text-white truncate">{job.title}</h3>
              <p className="text-blue-400 font-medium">{job.company}</p>
              <div className="flex justify-between items-center mt-4 text-sm text-gray-500">
                <span>ЁЯУН {job.location || "Remote"}</span>
                <span>{new Date(job.createdAt).toLocaleDateString()}</span>
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>
  );
}
