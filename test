JavaScript
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import { NextResponse } from "next/server";

// рзз. ржбрж╛ржЯрж╛ рж╕рзЗржн ржХрж░рж╛рж░ ржЬржирзНржп (ржЖржЧрзЗрж░ржЯрж╛ржЗ)
export async function POST(request) {
  try {
    await dbConnect();
    const jobData = await request.json();
    const newJob = await Job.create(jobData);
    return NextResponse.json({ success: true, data: newJob }, { status: 201 });
  } catch (error) {
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}

// рзи. ржбрж╛ржЯрж╛ ржирж┐рзЯрзЗ ржЖрж╕рж╛рж░ ржЬржирзНржп (ржирждрзБржи ржпрзЛржЧ рж╣рж▓рзЛ)
export async function GET() {
  try {
    await dbConnect();
    // ржирждрзБржи ржЬржм рж╕ржмрж╛рж░ ржЙржкрж░рзЗ ржжрзЗржЦрж╛ржмрзЗ (sort by createdAt descending)
    const jobs = await Job.find({}).sort({ createdAt: -1 });
    return NextResponse.json({ success: true, data: jobs });
  } catch (error) {
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}
