import Navbar from "@/components/Navbar";
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import User from "@/models/User";
import { MapPin, Calendar, DollarSign, Building, Mail, Linkedin, Github } from "lucide-react";

// рж╕рж╛рж░рзНржнрж╛рж░ рж╕рж╛ржЗржбрзЗ ржбрж╛ржЯрж╛ ржлрзЗржЪ ржХрж░рж╛
async function getJobDetails(id) {
  try {
    await dbConnect();
    const job = await Job.findById(id).lean();
    if (!job) return null;

    // ржЗржЙржЬрж╛рж░рзЗрж░ ржбрж┐ржЯрзЗржЗрж▓рж╕ ржЖржирж╛
    const user = await User.findOne({ email: job.userEmail }).lean();
    return { ...job, applicant: user };
  } catch (error) {
    return null;
  }
}

export default async function JobDetailsPage({ params }) {
  const { id } = await params; // Next.js 15+ ржП params await ржХрж░рждрзЗ рж╣рзЯ
  const job = await getJobDetails(id);

  if (!job) return (
    <div className="min-h-screen bg-[#0f172a] text-white flex items-center justify-center">
      <h1 className="text-2xl font-bold text-gray-500">Job not found ЁЯШХ</h1>
    </div>
  );

  return (
    <div className="min-h-screen bg-[#0f172a] text-white font-sans selection:bg-blue-500/30">
      <Navbar />

      <div className="max-w-6xl mx-auto pt-32 pb-20 px-6 grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        {/* --- ржмрж╛ржо ржкрж╛рж╢: ржЬржм ржбрж┐ржЯрзЗржЗрж▓рж╕ --- */}
        <div className="lg:col-span-2 space-y-6">
          <div className="bg-gray-800/50 backdrop-blur border border-gray-700 p-8 rounded-2xl shadow-xl">
            
            <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
              <div>
                <h1 className="text-3xl font-bold text-white mb-2 leading-tight">{job.title}</h1>
                <div className="flex items-center gap-2 text-xl text-blue-400 font-medium">
                  <Building size={20}/> {job.company}
                </div>
              </div>
              <span className={`px-4 py-2 rounded-full text-sm font-bold border uppercase tracking-wide ${
                job.status === 'Applied' ? 'bg-blue-500/10 text-blue-400 border-blue-500/20' : 
                job.status === 'Interview' ? 'bg-yellow-500/10 text-yellow-400 border-yellow-500/20' : 
                job.status === 'Offer' ? 'bg-green-500/10 text-green-400 border-green-500/20' : 
                'bg-gray-700 text-gray-400 border-gray-600'
              }`}>
                {job.status}
              </span>
            </div>

            <div className="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
              <div className="flex items-center gap-3 text-gray-300 bg-gray-900/50 p-4 rounded-xl border border-gray-700/50">
                <MapPin size={20} className="text-blue-500"/> 
                <div>
                  <p className="text-xs text-gray-500 uppercase font-bold">Location</p>
                  <p className="text-sm font-medium">{job.location || "Remote"}</p>
                </div>
              </div>
              <div className="flex items-center gap-3 text-gray-300 bg-gray-900/50 p-4 rounded-xl border border-gray-700/50">
                <DollarSign size={20} className="text-green-500"/>
                <div>
                  <p className="text-xs text-gray-500 uppercase font-bold">Salary</p>
                  <p className="text-sm font-medium">{job.salary || "Negotiable"}</p>
                </div>
              </div>
              <div className="flex items-center gap-3 text-gray-300 bg-gray-900/50 p-4 rounded-xl border border-gray-700/50">
                <Calendar size={20} className="text-purple-500"/>
                <div>
                  <p className="text-xs text-gray-500 uppercase font-bold">Applied On</p>
                  <p className="text-sm font-medium">{new Date(job.createdAt).toLocaleDateString()}</p>
                </div>
              </div>
            </div>

            <div className="prose prose-invert max-w-none">
              <h3 className="text-lg font-bold text-white mb-3 border-b border-gray-700 pb-2">Job Summary</h3>
              <p className="text-gray-300 leading-relaxed whitespace-pre-wrap text-sm">
                {job.description || "No description provided."}
              </p>
            </div>

            {job.postLink && (
              <a href={job.postLink} target="_blank" className="mt-8 inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-500 text-white px-6 py-3 rounded-xl font-bold transition shadow-lg shadow-blue-500/20">
                View Original Job Post тЖЧ
              </a>
            )}
          </div>
        </div>

        {/* --- ржбрж╛ржи ржкрж╛рж╢: ржЕрзНржпрж╛ржкрзНрж▓рж┐ржХрзНржпрж╛ржирзНржЯ ржкрзНрж░рзЛржлрж╛ржЗрж▓ --- */}
        <div className="lg:col-span-1">
          <div className="bg-gray-800/50 backdrop-blur border border-gray-700 p-6 rounded-2xl sticky top-24 shadow-xl">
            <h3 className="text-xs font-bold text-gray-500 uppercase mb-6 tracking-wider border-b border-gray-700 pb-2">Tracked By</h3>
            
            <div className="flex flex-col items-center text-center">
              <div className="relative mb-4 group">
                <div className="absolute -inset-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full blur opacity-25 group-hover:opacity-75 transition duration-200"></div>
                <img 
                  src={job.applicant?.image || "https://via.placeholder.com/100"} 
                  alt="User" 
                  className="relative w-24 h-24 rounded-full border-4 border-gray-900 object-cover shadow-2xl"
                />
                <div className="absolute bottom-1 right-1 bg-green-500 w-5 h-5 rounded-full border-4 border-gray-900"></div>
              </div>
              
              <h2 className="text-2xl font-bold text-white mb-1">{job.applicant?.name}</h2>
              <p className="text-gray-400 text-sm mb-6 px-4 line-clamp-2">{job.applicant?.bio || "Tech Enthusiast & Job Hunter"}</p>

              {/* Social / Contact Links */}
              <div className="w-full space-y-3">
                {job.applicant?.links?.linkedin && (
                  <a href={job.applicant.links.linkedin} target="_blank" className="flex items-center justify-center gap-3 w-full bg-[#0077b5]/10 hover:bg-[#0077b5]/20 text-[#0077b5] py-2.5 rounded-xl transition font-medium border border-[#0077b5]/20">
                    <Linkedin size={18}/> LinkedIn Profile
                  </a>
                )}
                {job.applicant?.links?.github && (
                  <a href={job.applicant.links.github} target="_blank" className="flex items-center justify-center gap-3 w-full bg-gray-700/50 hover:bg-gray-700 text-white py-2.5 rounded-xl transition font-medium border border-gray-600">
                    <Github size={18}/> GitHub Profile
                  </a>
                )}
                <button className="flex items-center justify-center gap-3 w-full border border-gray-600 hover:bg-gray-700/50 text-gray-300 py-2.5 rounded-xl transition font-medium">
                  <Mail size={18}/> Contact User
                </button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  );
}
