рждрзЛржорж╛рж░ src/lib/gemini.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ржЯрж╛ ржкрзЗрж╕рзНржЯ ржХрж░рзЛ:

JavaScript
import { GoogleGenerativeAI } from "@google/generative-ai";

const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

export async function extractJobData({ text, image, url }) {
  try {
    const model = genAI.getGenerativeModel({ model: "gemini-2.0-flash" });

    let promptParts = [
      `Extract job details from the input and return ONLY a JSON object.
       Do not use Markdown formatting.
       Fields: title, company, location, salary, description (max 2 sentences).
       If missing, set to null.
       Note: If the input is HTML, ignore script tags and focus on visible text.`
    ];

    // рзз. ржпржжрж┐ рж▓рж┐ржВржХ (URL) ржерж╛ржХрзЗ -> ZenRows ржжрж┐рзЯрзЗ HTML ржЖржиржмрзЛ
    if (url) {
      const zenRowsKey = process.env.ZENROWS_API_KEY;
      if (!zenRowsKey) throw new Error("ZenRows API Key missing");

      // рж▓рж┐ржВржХрзЗрж░ рж╕рзНржкрзЗрж╢рж╛рж▓ ржХрзНржпрж╛рж░рзЗржХрзНржЯрж╛рж░ рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛рж░ ржЬржирзНржп encodeURIComponent ржмрзНржпржмрж╣рж╛рж░ ржХрж░ржЫрж┐
      const proxyUrl = `https://api.zenrows.com/v1/?apikey=${zenRowsKey}&url=${encodeURIComponent(url)}&js_render=true&premium_proxy=true`;
      
      console.log("Fetching URL via ZenRows:", url); // ржбрж┐ржмрж╛ржЧрж┐ржВрзЯрзЗрж░ ржЬржирзНржп
      
      const response = await fetch(proxyUrl);
      if (!response.ok) {
        const errText = await response.text();
        throw new Error(`ZenRows Error: ${response.status} - ${errText}`);
      }
      
      const html = await response.text();
      promptParts.push(`HTML Content: ${html}`);
    }
    
    // рзи. ржЫржмрж┐ рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛
    else if (image) {
      // ржпржжрж┐ ржмрзЗрж╕рзмрзк рж╣рзЗржбрж╛рж░ ржерж╛ржХрзЗ (data:image/...) рж╕рзЗржЯрж╛ ржмрж╛ржж ржжрж┐ржЪрзНржЫрж┐
      const base64Data = image.includes("base64,") ? image.split(",")[1] : image;
      
      const imagePart = {
        inlineData: {
          data: base64Data,
          mimeType: "image/png",
        },
      };
      promptParts.push(imagePart);
    } 
    
    // рзй. ржЯрзЗржХрзНрж╕ржЯ рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛
    else if (text) {
      promptParts.push(text);
    }

    // Gemini ржХрзЗ ржХрж▓ ржХрж░рж╛
    const result = await model.generateContent(promptParts);
    const response = await result.response;
    let outputText = response.text();

    // ржХрзНрж▓рж┐ржиржЖржк
    outputText = outputText.replace(/```json/g, "").replace(/```/g, "").trim();
    const jobData = JSON.parse(outputText);

    // --- Platform & Link Detection Logic (ржПржХржЗ ржЬрж╛рзЯржЧрж╛рзЯ) ---
    if (url) {
      jobData.postLink = url;
      const lowerUrl = url.toLowerCase();
      if (lowerUrl.includes("linkedin")) jobData.platform = "LinkedIn";
      else if (lowerUrl.includes("bdjobs")) jobData.platform = "BDJobs";
      else if (lowerUrl.includes("glassdoor")) jobData.platform = "Glassdoor";
      else jobData.platform = "Web";
    } else if (image) {
      jobData.platform = "Screenshot";
    } else {
      jobData.platform = "Text Paste";
    }

    return jobData;

  } catch (error) {
    console.error("Gemini/ZenRows Logic Error:", error);
    throw error; // ржПрж░рж░ржЯрж╛ ржкрж╛рж╕ ржХрж░рзЗ ржжрж┐ржЪрзНржЫрж┐ ржпрж╛рждрзЗ API ржмрзБржЭрждрзЗ ржкрж╛рж░рзЗ
  }
}
ржзрж╛ржк рзи: src/app/api/extract/route.js ржЖржкржбрзЗржЯ (API ржХрж╛ржирзЗржХрж╢ржи) ЁЯФЧ
ржПржЦржи ржПржЗ ржлрж╛ржЗрж▓ржЯрж╛ ржПржХржжржо ржЫрзЛржЯ рж╣рзЯрзЗ ржпрж╛ржмрзЗред рж╕рзЗ рж╢рзБржзрзБ extractJobData ржлрж╛ржВрж╢ржиржЯрж╛ржХрзЗ ржХрж▓ ржХрж░ржмрзЗред

рждрзЛржорж╛рж░ src/app/api/extract/route.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржПржЯрж╛ ржжрж╛ржУ:

JavaScript
import { NextResponse } from "next/server";
import { extractJobData } from "@/lib/gemini"; // ржЖржорж╛ржжрзЗрж░ ржХржоржи ржлрж╛ржЗрж▓ ржЗржорзНржкрзЛрж░рзНржЯ ржХрж░рж▓рж╛ржо

export async function POST(request) {
  try {
    const body = await request.json();
    const { text, image, url } = body;

    if (!text && !image && !url) {
      return NextResponse.json({ error: "No content provided" }, { status: 400 });
    }

    // рж╕рж░рж╛рж╕рж░рж┐ ржЖржорж╛ржжрзЗрж░ ржХржоржи ржлрж╛ржВрж╢ржи ржХрж▓ ржХрж░ржЫрж┐
    console.log("Processing extraction request..."); // ржбрж┐ржмрж╛ржЧ рж▓ржЧ
    const jobData = await extractJobData({ text, image, url });

    return NextResponse.json({ success: true, data: jobData });

  } catch (error) {
    console.error("Extract API Error:", error.message);
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}
ржПржЦржи ржХрж┐ рж╣ржмрзЗ?
рзз. ржЯрзЗрж▓рж┐ржЧрзНрж░рж╛ржо ржПржмржВ ржУрзЯрзЗржмрж╕рж╛ржЗржЯтАФржжрзБржЬржирзЗржЗ ржПржЦржи lib/gemini.js ржлрж╛ржЗрж▓ ржмрзНржпржмрж╣рж╛рж░ ржХрж░ржмрзЗред рзи. ржЖржорж┐ ZenRows ржПрж░ рж▓рж┐ржВржХрзЗ &premium_proxy=true ржпрзЛржЧ ржХрж░рзЗржЫрж┐, ржпрзЗржЯрж╛ LinkedIn ржПрж░ ржорждрзЛ ржХржарж┐ржи рж╕рж╛ржЗржЯржЧрзБрж▓рзЛрж░ ржбрж╛ржЯрж╛ ржЖржирждрзЗ рж╕рж╛рж╣рж╛ржпрзНржп ржХрж░ржмрзЗред рзй. ржпржжрж┐ ржПрж░рж░ ржЦрж╛рзЯ, рждрж╛рж╣рж▓рзЗ рждрзЛржорж╛рж░ VS Code Terminal-ржП ржкрж░рж┐рж╖рзНржХрж╛рж░ ржжрзЗржЦрж╛ ржпрж╛ржмрзЗ ржХрзА ржХрж╛рж░ржгрзЗ ржПрж░рж░ рж╣ржЪрзНржЫрзЗ (ZenRows ржПрж░рж░ ржирж╛ржХрж┐ Gemini ржПрж░рж░)ред

