ржПржЦржи ржЖржорж╛ржжрзЗрж░ ржХрзЛржб api/extract ржПрж░ ржнрзЗрждрж░рзЗ ржЖржЫрзЗред рж╕рзЗржЯрж╛ржХрзЗ ржмрзЗрж░ ржХрж░рзЗ ржПржХржЯрж╛ ржХржоржи ржЬрж╛рзЯржЧрж╛рзЯ рж░рж╛ржЦрж┐, ржпрж╛рждрзЗ ржмржЯржУ рж╕рзЗржЯрж╛ ржмрзНржпржмрж╣рж╛рж░ ржХрж░рждрзЗ ржкрж╛рж░рзЗред

рзз. src/lib ржлрзЛрж▓рзНржбрж╛рж░рзЗрж░ ржнрзЗрждрж░ ржПржХржЯрж╛ ржирждрзБржи ржлрж╛ржЗрж▓ ржмрж╛ржирж╛ржУ: gemini.js рзи. ржирж┐ржЪрзЗрж░ ржХрзЛржбржЯрж╛ ржкрзЗрж╕рзНржЯ ржХрж░рзЛ:

JavaScript
import { GoogleGenerativeAI } from "@google/generative-ai";

const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

export async function extractJobData({ text, image, url }) {
  try {
    const model = genAI.getGenerativeModel({ model: "gemini-2.0-flash" });
    let promptParts = [
      `Extract job details and return ONLY a JSON object. No Markdown.
       Fields: title, company, location, salary, type, description (max 2 sentences).
       If missing, set to null.
       Ignore script tags if HTML.`
    ];

    // рзз. ржпржжрж┐ рж▓рж┐ржВржХ ржерж╛ржХрзЗ (ZenRows)
    if (url) {
      const zenRowsKey = process.env.ZENROWS_API_KEY;
      const proxyUrl = `https://api.zenrows.com/v1/?apikey=${zenRowsKey}&url=${encodeURIComponent(url)}&js_render=true`;
      const response = await fetch(proxyUrl);
      if (!response.ok) throw new Error("Failed to fetch URL via ZenRows");
      const html = await response.text();
      promptParts.push(`HTML Content: ${html}`);
    }
    // рзи. ржпржжрж┐ ржЫржмрж┐ ржерж╛ржХрзЗ
    else if (image) {
      const imagePart = { inlineData: { data: image, mimeType: "image/png" } };
      promptParts.push(imagePart);
    }
    // рзй. ржпржжрж┐ ржЯрзЗржХрзНрж╕ржЯ ржерж╛ржХрзЗ
    else if (text) {
      promptParts.push(text);
    }

    const result = await model.generateContent(promptParts);
    const response = await result.response;
    let outputText = response.text();
    
    outputText = outputText.replace(/```json/g, "").replace(/```/g, "").trim();
    return JSON.parse(outputText);
  } catch (error) {
    console.error("Gemini Error:", error);
    throw error;
  }
}
ржзрж╛ржк рзи: ржмржЯрзЗрж░ рж░рж╛ржЙржЯ рждрзИрж░рж┐ (The Bot Logic) ЁЯдЦ
