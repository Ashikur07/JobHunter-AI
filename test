ржзрж╛ржк рзз: API ржЖржкржбрзЗржЯ (src/app/api/jobs/route.js) тЪЩя╕П
API-ржХрзЗ ржмрж▓рждрзЗ рж╣ржмрзЗ ржпрзЗ ржкрж╛ржмрж▓рж┐ржХ ржЬржмрзЗрж░ ржбрж╛ржЯрж╛ ржкрж╛ржарж╛ржирзЛрж░ рж╕ржорзЯ ржпрзЗржи ржЗржЙржЬрж╛рж░рзЗрж░ ржирж╛ржо ржУ ржЫржмрж┐ржУ ржЦрзБржБржЬрзЗ ржирж┐рзЯрзЗ ржЖрж╕рзЗред

рждрзЛржорж╛рж░ src/app/api/jobs/route.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ржЯрж╛ ржжрж╛ржУ:

JavaScript
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import User from "@/models/User"; // User ржоржбрзЗрж▓ ржЗржоржкрзЛрж░рзНржЯ ржХрж░рж▓рж╛ржо
import { NextResponse } from "next/server";
import { getServerSession } from "next-auth"; 
import { authOptions } from "@/app/api/auth/[...nextauth]/route"; 

export async function GET(request) {
  try {
    await dbConnect();
    const { searchParams } = new URL(request.url);
    const type = searchParams.get('type');

    // --- PUBLIC REQUEST (Landing Page) ---
    if (type === 'public') {
      // рж▓рзЗржЯрзЗрж╕рзНржЯ рзпржЯрж╛ ржЬржм ржЖржиржЫрж┐
      const jobs = await Job.find({})
        .sort({ createdAt: -1 })
        .limit(9)
        .lean(); // lean() ржмрзНржпржмрж╣рж╛рж░ ржХрж░рж▓рж╛ржо ржпрж╛рждрзЗ ржбрж╛ржЯрж╛ ржоржбрж┐ржлрж╛ржЗ ржХрж░рж╛ ржпрж╛рзЯ

      // ржкрзНрж░рждрж┐ржЯрж┐ ржЬржмрзЗрж░ ржЬржирзНржп ржЗржЙржЬрж╛рж░ ржЗржиржлрзЛ ржЦрзБржБржЬрзЗ ржмрзЗрж░ ржХрж░рж╛
      const jobsWithUser = await Promise.all(jobs.map(async (job) => {
        const user = await User.findOne({ email: job.userEmail }).select("name image");
        return {
          ...job,
          applicant: user || { name: "Anonymous", image: null } // ржЗржЙржЬрж╛рж░ ржЗржиржлрзЛ ржпрзЛржЧ ржХрж░рж▓рж╛ржо
        };
      }));
      
      return NextResponse.json({ success: true, data: jobsWithUser });
    }

    // --- PRIVATE REQUEST (Dashboard) ---
    const session = await getServerSession(authOptions);
    if (!session) return NextResponse.json({ error: "Unauthorized" }, { status: 401 });

    const jobs = await Job.find({ userEmail: session.user.email }).sort({ createdAt: -1 });
    return NextResponse.json({ success: true, data: jobs });

  } catch (error) {
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}

// POST ржлрж╛ржВрж╢ржи (ржЖржЧрзЗрж░ ржорждрзЛржЗ ржерж╛ржХржмрзЗ)
export async function POST(request) {
  try {
    const session = await getServerSession(authOptions);
    if (!session) return NextResponse.json({ error: "Unauthorized" }, { status: 401 });

    await dbConnect();
    const jobData = await request.json();
    
    const newJob = await Job.create({
      ...jobData,
      userEmail: session.user.email 
    });

    return NextResponse.json({ success: true, data: newJob }, { status: 201 });
  } catch (error) {
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}
