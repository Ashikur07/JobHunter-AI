JavaScript
import { GoogleGenerativeAI } from "@google/generative-ai";
import { NextResponse } from "next/server";

const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

export async function POST(request) {
  try {
    // ржЖржорж░рж╛ ржПржЦржи text, image, ржЕржержмрж╛ url рж░рж┐рж╕рж┐ржн ржХрж░рждрзЗ ржкрж╛рж░рж┐
    const { text, image, url } = await request.json();

    if (!text && !image && !url) {
      return NextResponse.json({ error: "No content provided" }, { status: 400 });
    }

    // ржоржбрзЗрж▓ рж╕рзЗржЯржЖржк (рждрзЛржорж╛рж░ рж▓рзЗржЯрзЗрж╕рзНржЯ ржоржбрзЗрж▓)
    const model = genAI.getGenerativeModel({ model: "gemini-2.0-flash" });

    let promptParts = [
      `Extract job details from the input and return ONLY a JSON object.
       Do not use Markdown formatting.
       Fields: title, company, location, salary, description (max 2 sentences).
       If missing, set to null.
       Note: If the input is HTML, ignore script tags and focus on visible text.`
    ];

    // рзз. ржпржжрж┐ рж▓рж┐ржВржХ (URL) ржерж╛ржХрзЗ -> ZenRows ржжрж┐ржпрж╝рзЗ HTML ржЖржиржмрзЛ
    if (url) {
      const zenRowsKey = process.env.ZENROWS_API_KEY;
      // ZenRows ржПрж░ ржорж╛ржзрзНржпржорзЗ рж░рж┐ржХрзЛржпрж╝рзЗрж╕рзНржЯ ржкрж╛ржарж╛ржЪрзНржЫрж┐
      const proxyUrl = `https://api.zenrows.com/v1/?apikey=${zenRowsKey}&url=${encodeURIComponent(url)}&js_render=true`;
      
      const response = await fetch(proxyUrl);
      if (!response.ok) {
        throw new Error("Failed to fetch URL content via ZenRows");
      }
      
      const html = await response.text();
      // ржкрзБрж░рзЛ HTML Gemini-ржХрзЗ ржжрж┐ржпрж╝рзЗ ржжрж┐ржЪрзНржЫрж┐
      promptParts.push(`HTML Content of the job page: ${html}`);
    }
    
    // рзи. ржпржжрж┐ ржЫржмрж┐ (Image) ржерж╛ржХрзЗ
    else if (image) {
      const imagePart = {
        inlineData: {
          data: image.split(",")[1],
          mimeType: "image/png",
        },
      };
      promptParts.push(imagePart);
    } 
    
    // рзй. ржпржжрж┐ ржЯрзЗржХрзНрж╕ржЯ (Text) ржерж╛ржХрзЗ
    else if (text) {
      promptParts.push(text);
    }

    // AI ржкрзНрж░рж╕рзЗрж╕рж┐ржВ
    const result = await model.generateContent(promptParts);
    const response = await result.response;
    let outputText = response.text();

    // ржХрзНрж▓рж┐ржиржЖржк
    outputText = outputText.replace(/```json/g, "").replace(/```/g, "").trim();
    
    // JSON ржкрж╛рж░рзНрж╕ ржХрж░рж╛
    const jobData = JSON.parse(outputText);

    // --- ржирждрзБржи рж▓ржЬрж┐ржХ рж╢рзБрж░рзБ (Platform & Link Detection) ---
    if (url) {
      jobData.postLink = url; // рж▓рж┐ржВржХржЯрж╛ ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ рж╕рзЗржн ржХрж░рж╛рж░ ржЬржирзНржп рж╕рзЗржЯ ржХрж░рж▓рж╛ржо
      
      // рж▓рж┐ржВржХ ржжрзЗржЦрзЗ ржкрзНрж▓рзНржпрж╛ржЯржлрж░рзНржо ржЪрзЗржирж╛рж░ ржЪрзЗрж╖рзНржЯрж╛
      const lowerUrl = url.toLowerCase();
      if (lowerUrl.includes("linkedin")) jobData.platform = "LinkedIn";
      else if (lowerUrl.includes("bdjobs")) jobData.platform = "BDJobs";
      else if (lowerUrl.includes("glassdoor")) jobData.platform = "Glassdoor";
      else if (lowerUrl.includes("facebook")) jobData.platform = "Facebook";
      else jobData.platform = "Web";
    } else if (image) {
      jobData.platform = "Screenshot";
    } else {
      jobData.platform = "Text Paste";
    }
    // --- ржирждрзБржи рж▓ржЬрж┐ржХ рж╢рзЗрж╖ ---

    return NextResponse.json({ success: true, data: jobData });

  } catch (error) {
    console.error("Error extracting data:", error);
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}
