src/app/api/telegram/route.js (Fixed Version)
JavaScript
import { NextResponse } from "next/server";
import TelegramBot from "node-telegram-bot-api";
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import { extractJobData } from "@/lib/gemini";

const token = process.env.TELEGRAM_BOT_TOKEN;

// тЪая╕П ржлрж┐ржХрзНрж╕: polling: false ржжрзЗржУрзЯрж╛ ржмрж╛ржзрзНржпрждрж╛ржорзВрж▓ржХ Vercel ржПрж░ ржЬржирзНржп
const bot = new TelegramBot(token, { polling: false });

export async function POST(request) {
  try {
    const body = await request.json();
    
    // рж╢рзБржзрзБ ржорзЗрж╕рзЗржЬ ржерж╛ржХрж▓рзЗ ржкрзНрж░рж╕рзЗрж╕ ржХрж░ржм (Edit ржмрж╛ ржЕржирзНржп ржХрж┐ржЫрзБ ржирж╛)
    if (body.message) {
      const { chat, text, photo } = body.message;
      const chatId = chat.id;

      try {
        // --- рзз. ржЫржмрж┐ (Screenshot) рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛ ---
        if (photo) {
          await bot.sendMessage(chatId, "ЁЯУ╕ Analyzing screenshot... This may take a few seconds.");
          
          // рж╕ржмржЪрзЗрзЯрзЗ ржХрзНрж▓рж┐рзЯрж╛рж░ ржЫржмрж┐ржЯрж╛ ржирж┐рж▓рж╛ржо
          const fileId = photo[photo.length - 1].file_id;
          const fileLink = await bot.getFileLink(fileId);
          
          // ржЫржмрж┐ ржбрж╛ржЙржирж▓рзЛржб ржХрж░рзЗ Base64 ржХрж░рж╛
          const imgRes = await fetch(fileLink);
          const arrayBuffer = await imgRes.arrayBuffer();
          const buffer = Buffer.from(arrayBuffer);
          const base64Image = buffer.toString("base64");

          // Gemini ржжрж┐рзЯрзЗ ржбрж╛ржЯрж╛ ржмрзЗрж░ ржХрж░рж╛
          const jobData = await extractJobData({ image: base64Image });
          
          // рж╕рзЗржн ржХрж░рж╛
          await dbConnect();
          jobData.platform = "Telegram Screenshot";
          const newJob = await Job.create(jobData);

          await bot.sendMessage(chatId, `тЬЕ **Saved from Screenshot!**\n\nЁЯУМ Title: ${newJob.title}\nЁЯПв Company: ${newJob.company}`);
          return NextResponse.json({ success: true });
        }

        // --- рзи. ржХржорж╛ржирзНржб рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛ ---
        if (text) {
          if (text === "/start") {
            await bot.sendMessage(chatId, "ЁЯСЛ Welcome! Send me a Job Link, Text, or Screenshot to save it.");
            return NextResponse.json({ success: true });
          }

          if (text === "/myjobs") {
            await dbConnect();
            const jobs = await Job.find().sort({ createdAt: -1 }).limit(5);
            if (jobs.length === 0) {
              await bot.sendMessage(chatId, "No jobs saved yet.");
            } else {
              let msg = "ЁЯУЛ **Last 5 Jobs:**\n";
              jobs.forEach((job, i) => msg += `\n${i+1}. ${job.title} \n   (${job.company})`);
              await bot.sendMessage(chatId, msg, { parse_mode: "Markdown" });
            }
            return NextResponse.json({ success: true });
          }

          if (text === "/today") {
            await dbConnect();
            const start = new Date();
            start.setHours(0,0,0,0);
            const jobs = await Job.find({ createdAt: { $gte: start } });
            await bot.sendMessage(chatId, `ЁЯУЕ You saved **${jobs.length}** jobs today.`);
            return NextResponse.json({ success: true });
          }

          // --- рзй. рж▓рж┐ржВржХ ржмрж╛ ржЯрзЗржХрзНрж╕ржЯ рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛ ---
          await bot.sendMessage(chatId, "ЁЯФО Analyzing... Please wait.");
          
          let jobData;
          if (text.startsWith("http")) {
             jobData = await extractJobData({ url: text });
          } else {
             jobData = await extractJobData({ text: text });
             jobData.platform = "Telegram Text";
          }

          if (jobData) {
            await dbConnect();
            const newJob = await Job.create(jobData);
            await bot.sendMessage(chatId, `тЬЕ **Job Saved!**\n\nЁЯУМ ${newJob.title}\nЁЯПв ${newJob.company}`);
          }
        }

      } catch (innerError) {
        console.error("Processing Error:", innerError);
        // ржЗржЙржЬрж╛рж░ржХрзЗ ржЬрж╛ржирж╛ржирзЛ ржпрзЗ рж╕ржорж╕рзНржпрж╛ рж╣рзЯрзЗржЫрзЗ
        await bot.sendMessage(chatId, "тЪая╕П Error processing your request. Please try again.");
      }
    }

    return NextResponse.json({ success: true });

  } catch (error) {
    console.error("Telegram API Error:", error);
    return NextResponse.json({ error: error.message }, { status: 500 });
  }
}
тЪая╕П ржПржЦржи ржпрж╛ ржХрж░рждрзЗ рж╣ржмрзЗ (ржнрзБрж▓рзЛ ржирж╛):
