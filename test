рзз. src/app/api/auth/verify ржлрзЛрж▓рзНржбрж╛рж░ ржмрж╛ржирж╛ржУред рзи. рждрж╛рж░ ржнрзЗрждрж░ route.js ржлрж╛ржЗрж▓ ржмрж╛ржирж╛ржУред

JavaScript
import dbConnect from "@/lib/mongodb";
import User from "@/models/User";
import { NextResponse } from "next/server";
import { redirect } from "next/navigation";

export async function GET(request) {
  const { searchParams } = new URL(request.url);
  const token = searchParams.get("token");

  if (!token) {
    return NextResponse.json({ error: "Token missing" }, { status: 400 });
  }

  await dbConnect();

  // ржЯрзЛржХрзЗржи ржЪрзЗржХ ржХрж░рж╛ (ржПржмржВ ржорзЗрзЯрж╛ржж ржЖржЫрзЗ ржХрж┐ржирж╛ ржжрзЗржЦрж╛)
  const user = await User.findOne({
    verifyToken: token,
    verifyTokenExpiry: { $gt: Date.now() }, // ржорзЗрзЯрж╛ржж ржерж╛ржХрждрзЗ рж╣ржмрзЗ
  });

  if (!user) {
    // ржЯрзЛржХрзЗржи ржнрзБрж▓ ржмрж╛ ржорзЗрзЯрж╛ржж рж╢рзЗрж╖
    return NextResponse.json({ error: "Invalid or expired token" }, { status: 400 });
  }

  // ржЗржЙржЬрж╛рж░ ржнрзЗрж░рж┐ржлрж╛ржЗржб ржХрж░рж╛
  user.isVerified = true;
  user.verifyToken = undefined;
  user.verifyTokenExpiry = undefined;
  await user.save();

  // рж╕ржлрж▓ рж╣рж▓рзЗ рж▓ржЧ-ржЗржи ржкрзЗржЬрзЗ ржкрж╛ржарж┐рзЯрзЗ ржжрзЗржм
  redirect("/signin?verified=true");
}
