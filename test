src/app/page.js (New Modern UI)
JavaScript
"use client";
import { useState, useEffect } from "react";

export default function Home() {
  // --- States ---
  const [jobs, setJobs] = useState([]);
  const [loading, setLoading] = useState(false);
  
  // Input States
  const [activeTab, setActiveTab] = useState("link");
  const [inputUrl, setInputUrl] = useState("");
  const [inputText, setInputText] = useState("");

  // Modal State (Details ржжрзЗржЦрж╛рж░ ржЬржирзНржп)
  const [selectedJob, setSelectedJob] = useState(null);

  // --- Initial Load ---
  useEffect(() => {
    fetchJobs();
  }, []);

  const fetchJobs = async () => {
    try {
      const res = await fetch("/api/jobs");
      const data = await res.json();
      if (data.success) setJobs(data.data);
    } catch (error) {
      console.error("Error fetching jobs:", error);
    }
  };

  // --- Extract & Save Logic ---
  const handleExtract = async () => {
    setLoading(true);
    let payload = {};
    if (activeTab === "link") payload = { url: inputUrl };
    else if (activeTab === "text") payload = { text: inputText };

    if (Object.keys(payload).length === 0) return;

    try {
      // 1. Extract
      const res = await fetch("/api/extract", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(payload),
      });
      const data = await res.json();
      
      if (data.success) {
        // 2. Auto Save
        await saveJob(data.data);
      } else {
        alert("Failed to extract data.");
      }
    } catch (error) {
      console.error(error);
      alert("Something went wrong!");
    } finally {
      setLoading(false);
    }
  };

  const saveJob = async (jobData) => {
    try {
      const res = await fetch("/api/jobs", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(jobData),
      });
      const data = await res.json();
      if (data.success) {
        alert("Job Saved! ЁЯЪА");
        setInputUrl("");
        setInputText("");
        fetchJobs(); // Refresh list
      }
    } catch (error) {
      console.error("Error saving:", error);
    }
  };

  return (
    <div className="min-h-screen bg-gray-900 text-white font-sans">
      
      {/* --- 1. NAVBAR --- */}
      <nav className="fixed top-0 w-full bg-gray-900/90 backdrop-blur border-b border-gray-800 z-40">
        <div className="max-w-7xl mx-auto px-4 h-16 flex justify-between items-center">
          <div className="text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            JobHunter AI ЁЯХ╡я╕ПтАНтЩВя╕П
          </div>
          <div className="text-sm text-gray-400">
            Total Jobs: <span className="text-white font-bold">{jobs.length}</span>
          </div>
        </div>
      </nav>

      <div className="pt-24 px-4 max-w-7xl mx-auto">
        
        {/* --- 2. INPUT BOX (Modern Card) --- */}
        <div className="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow-lg mb-8">
          {/* Tabs */}
          <div className="flex gap-4 mb-4 border-b border-gray-700 pb-2">
            <button 
              onClick={() => setActiveTab("link")} 
              className={`text-sm font-bold pb-1 ${activeTab === "link" ? "text-blue-400 border-b-2 border-blue-400" : "text-gray-500"}`}
            >
              ЁЯФЧ Link Paste
            </button>
            <button 
              onClick={() => setActiveTab("text")} 
              className={`text-sm font-bold pb-1 ${activeTab === "text" ? "text-blue-400 border-b-2 border-blue-400" : "text-gray-500"}`}
            >
              ЁЯУЭ Text Paste
            </button>
          </div>

          {/* Input Field */}
          <div className="flex gap-3">
            {activeTab === "link" ? (
              <input 
                type="text" 
                placeholder="Paste Job Link here..."
                className="flex-1 bg-gray-900 border border-gray-600 rounded-lg px-4 py-2 focus:border-blue-500 outline-none text-sm"
                value={inputUrl}
                onChange={(e) => setInputUrl(e.target.value)}
              />
            ) : (
              <input 
                type="text" 
                placeholder="Paste Job Description here..."
                className="flex-1 bg-gray-900 border border-gray-600 rounded-lg px-4 py-2 focus:border-blue-500 outline-none text-sm"
                value={inputText}
                onChange={(e) => setInputText(e.target.value)}
              />
            )}
            <button 
              onClick={handleExtract}
              disabled={loading}
              className="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg text-sm font-bold transition"
            >
              {loading ? "Processing..." : "Add Job ЁЯЪА"}
            </button>
          </div>
        </div>

        {/* --- 3. DATA TABLE --- */}
        <div className="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden shadow-xl">
          <table className="w-full text-left border-collapse">
            <thead>
              <tr className="bg-gray-900 text-gray-400 text-xs uppercase">
                <th className="p-4 border-b border-gray-700">#</th>
                <th className="p-4 border-b border-gray-700">Company</th>
                <th className="p-4 border-b border-gray-700">Job Title</th>
                <th className="p-4 border-b border-gray-700">Location</th>
                <th className="p-4 border-b border-gray-700">Salary</th>
                <th className="p-4 border-b border-gray-700 text-center">Details</th>
              </tr>
            </thead>
            <tbody className="text-sm text-gray-300">
              {jobs.map((job, index) => (
                <tr key={job._id} className="hover:bg-gray-700/50 transition border-b border-gray-700/50 last:border-0">
                  <td className="p-4 text-gray-500">{index + 1}</td>
                  <td className="p-4 font-bold text-white">{job.company}</td>
                  <td className="p-4 text-blue-300">{job.title}</td>
                  <td className="p-4">{job.location || "Remote"}</td>
                  <td className="p-4 text-green-400">{job.salary || "N/A"}</td>
                  <td className="p-4 text-center">
                    <button 
                      onClick={() => setSelectedJob(job)}
                      className="text-xs bg-gray-700 hover:bg-gray-600 text-white px-3 py-1 rounded border border-gray-600"
                    >
                      View
                    </button>
                  </td>
                </tr>
              ))}
              {jobs.length === 0 && (
                <tr>
                  <td colSpan="6" className="p-8 text-center text-gray-500">No jobs saved yet.</td>
                </tr>
              )}
            </tbody>
          </table>
        </div>

      </div>

      {/* --- 4. MODAL (POPUP) --- */}
      {selectedJob && (
        <div className="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4 backdrop-blur-sm">
          <div className="bg-gray-800 w-full max-w-lg rounded-xl border border-gray-600 shadow-2xl">
            <div className="p-6 border-b border-gray-700 flex justify-between">
              <h3 className="text-xl font-bold">{selectedJob.title}</h3>
              <button onClick={() => setSelectedJob(null)} className="text-gray-400 hover:text-white">тЬХ</button>
            </div>
            <div className="p-6 space-y-4 max-h-[60vh] overflow-y-auto">
              <div>
                <label className="text-xs text-gray-500 uppercase">Company</label>
                <p className="text-lg font-semibold text-blue-400">{selectedJob.company}</p>
              </div>
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="text-xs text-gray-500 uppercase">Location</label>
                  <p>{selectedJob.location}</p>
                </div>
                <div>
                  <label className="text-xs text-gray-500 uppercase">Salary</label>
                  <p className="text-green-400">{selectedJob.salary}</p>
                </div>
              </div>
              <div>
                <label className="text-xs text-gray-500 uppercase">Description / Summary</label>
                <div className="bg-gray-900 p-3 rounded mt-1 text-gray-300 text-sm">
                  {selectedJob.description}
                </div>
              </div>
              <div>
                <label className="text-xs text-gray-500 uppercase">Status</label>
                <span className="ml-2 px-2 py-0.5 bg-blue-900 text-blue-200 rounded text-xs">
                  {selectedJob.status}
                </span>
              </div>
            </div>
            <div className="p-4 border-t border-gray-700 text-right">
              <button 
                onClick={() => setSelectedJob(null)}
                className="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded text-sm font-bold"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      )}

    </div>
  );
}
ржПржЯрж╛ рж╕рзЗржн ржХрж░рзЗ ржжрзЗржЦрзЛ: рзз. ржЙржкрж░рзЗ рж╕рзБржирзНржжрж░ ржПржХржЯрж╛ Navbar ржПрж╕рзЗржЫрзЗред рзи. ржЬржмрзЗрж░ рж▓рж┐рж╕рзНржЯржЯрж╛ ржПржЦржи Clean Table ржЖржХрж╛рж░рзЗ ржЖржЫрзЗред рзй. Link Paste ржЖрж░ Text Paste ржПрж░ ржЬржирзНржп рж╕рзБржирзНржжрж░ ржЯрзНржпрж╛ржм ржЖржЫрзЗред рзк. View ржмрж╛ржЯржирзЗ ржХрзНрж▓рж┐ржХ ржХрж░рж▓рзЗ ржПржХржЯрж╛ Popup ржЖрж╕ржмрзЗ ржпрзЗржЦрж╛ржирзЗ ржбрж┐ржЯрзЗржЗрж▓рж╕ ржжрзЗржЦрж╛ ржпрж╛ржмрзЗред

