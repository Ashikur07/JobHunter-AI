JavaScript
import dbConnect from "@/lib/mongodb";
import User from "@/models/User";
import { NextResponse } from "next/server";
import { redirect } from "next/navigation";

export async function GET(request) {
  const { searchParams } = new URL(request.url);
  const token = searchParams.get("token");

  if (!token) {
    return NextResponse.json({ error: "Token missing" }, { status: 400 });
  }

  await dbConnect();

  // ржЯрзЛржХрзЗржи ржПржмржВ ржорзЗрзЯрж╛ржж ржЪрзЗржХ ржХрж░рж╛
  const user = await User.findOne({
    verifyToken: token,
    verifyTokenExpiry: { $gt: Date.now() }, // ржорзЗрзЯрж╛ржж рж╢рзЗрж╖ рж╣рзЯржирж┐ рждрзЛ?
  });

  if (!user) {
    return NextResponse.json({ error: "Invalid or expired token" }, { status: 400 });
  }

  // ржЗржЙржЬрж╛рж░ржХрзЗ ржнрзЗрж░рж┐ржлрж╛ржЗржб ржХрж░рж╛
  user.isVerified = true;
  user.verifyToken = undefined;
  user.verifyTokenExpiry = undefined;
  await user.save();

  // рж╕ржлрж▓ рж╣рж▓рзЗ рж▓ржЧ-ржЗржи ржкрзЗржЬрзЗ ржкрж╛ржарж┐рзЯрзЗ ржжрзЗржмрзЛ (рж╕рж╛ржерзЗ ржПржХржЯрж╛ ржорзЗрж╕рзЗржЬ)
  redirect("/signin?verified=true");
}
