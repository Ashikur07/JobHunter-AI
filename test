тЪая╕П рж╕рждрж░рзНржХрждрж╛: ржирж┐ржЪрзЗрж░ ржХрзЛржбрзЗ YOUR_VERCEL_APP_URL ржПрж░ ржЬрж╛рзЯржЧрж╛рзЯ рждрзЛржорж╛рж░ рж▓рж╛ржЗржн рж╕рж╛ржЗржЯрзЗрж░ рж▓рж┐ржВржХржЯрж╛ ржмрж╕рж╛рждрзЗ рж╣ржмрзЗ (ржпрзЗржоржи: https://job-hunter-xyz.vercel.app)ред рж╢рзЗрж╖рзЗрж░ / ржЯрж╛ ржжрзЗржмрзЗ ржирж╛ред

JavaScript
// рждрзЛржорж╛рж░ рж▓рж╛ржЗржн рж╕рж╛ржЗржЯрзЗрж░ рж▓рж┐ржВржХ ржПржЦрж╛ржирзЗ ржмрж╕рж╛ржУ (рж╢рзЗрж╖рзЗ рж╕рзНрж▓рзНржпрж╛рж╢ / ржжрзЗржмрзЗ ржирж╛)
const API_URL = "https://рждрзЛржорж╛рж░-ржЕрзНржпрж╛ржк-ржПрж░-ржирж╛ржо.vercel.app"; 

document.getElementById("scanBtn").addEventListener("click", async () => {
  const status = document.getElementById("status");
  const btn = document.getElementById("scanBtn");

  btn.disabled = true;
  btn.innerText = "Scanning Page...";
  status.innerText = "";

  try {
    // рзз. ржмрж░рзНрждржорж╛ржи ржЯрзНржпрж╛ржмрзЗ ржЧрж┐рзЯрзЗ ржкрзЗржЬрзЗрж░ рж╕ржм рж▓рзЗржЦрж╛ (Text) ржирж┐рзЯрзЗ ржЖрж╕рж┐
    let [tab] = await chrome.tabs.query({ active: true, currentWindow: true });
    
    chrome.scripting.executeScript({
      target: { tabId: tab.id },
      function: getPageText,
    }, async (results) => {
      
      if (!results || !results[0] || !results[0].result) {
        throw new Error("Could not read page content");
      }

      const pageText = results[0].result;
      
      // рзи. ржЖржорж╛ржжрзЗрж░ AI рж╕рж╛рж░рзНржнрж╛рж░рзЗ ржкрж╛ржарж╛ржЗ (Extract ржХрж░рж╛рж░ ржЬржирзНржп)
      btn.innerText = "Analyzing with AI...";
      
      const extractRes = await fetch(`${API_URL}/api/extract`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ text: pageText }),
      });
      
      const extractData = await extractRes.json();

      if (!extractData.success) throw new Error("AI Extraction Failed");

      // рзй. ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ рж╕рзЗржн ржХрж░рж┐
      btn.innerText = "Saving to DB...";
      
      const saveRes = await fetch(`${API_URL}/api/jobs`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(extractData.data),
      });

      const saveData = await saveRes.json();

      if (saveData.success) {
        status.innerHTML = "<span class='success'>Successfully Saved! ЁЯОЙ</span>";
        btn.innerText = "Done!";
        setTimeout(() => {
          btn.disabled = false;
          btn.innerText = "Extract & Save Job ЁЯЪА";
        }, 2000);
      } else {
        throw new Error("Save Failed");
      }

    });

  } catch (error) {
    console.error(error);
    status.innerHTML = `<span class='error'>Error: ${error.message}</span>`;
    btn.disabled = false;
    btn.innerText = "Try Again";
  }
});

// ржкрзЗржЬрзЗрж░ рж▓рзЗржЦрж╛ ржХржкрж┐ ржХрж░рж╛рж░ рж╕рзНржХрзНрж░рж┐ржкрзНржЯ
function getPageText() {
  return document.body.innerText;
}
