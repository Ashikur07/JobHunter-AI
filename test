рждрзЛржорж╛рж░ src/app/api/telegram/route.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ ржмрж┐рж╢рж╛рж▓ ржХрзЛржбржЯрж╛ ржкрзЗрж╕рзНржЯ ржХрж░рзЛред ржЖржорж┐ рж╕ржм рж▓ржЬрж┐ржХ ржПржХрж╕рж╛ржерзЗ ржХрж░рзЗ ржжрж┐рзЯрзЗржЫрж┐ред

src/app/api/telegram/route.js (Ultimate Bot Code)
JavaScript
import { NextResponse } from "next/server";
import TelegramBot from "node-telegram-bot-api";
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import { extractJobData } from "@/lib/gemini";

const token = process.env.TELEGRAM_BOT_TOKEN;
const bot = new TelegramBot(token);

export async function POST(request) {
  try {
    const body = await request.json();
    
    if (body.message) {
      const { chat, text, photo } = body.message;
      const chatId = chat.id;

      // --- рзз. ржЫржмрж┐ рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛ (Screenshot Feature) ---
      if (photo) {
        await bot.sendMessage(chatId, "ЁЯУ╕ Analyzing screenshot... Please wait.");
        
        // рж╕ржмржЪрж╛ржЗрждрзЗ ржнрж╛рж▓рзЛ ржХрзЛрзЯрж╛рж▓рж┐ржЯрж┐рж░ ржЫржмрж┐ржЯрж╛ ржирж┐ржЪрзНржЫрж┐
        const fileId = photo[photo.length - 1].file_id;
        
        // ржЯрзЗрж▓рж┐ржЧрзНрж░рж╛ржо ржерзЗржХрзЗ ржЫржмрж┐рж░ рж▓рж┐ржВржХ ржмрзЗрж░ ржХрж░рж╛
        const fileLink = await bot.getFileLink(fileId);
        
        // ржЫржмрж┐ржЯрж╛ ржбрж╛ржЙржирж▓рзЛржб ржХрж░рзЗ Base64 ржП ржХржиржнрж╛рж░рзНржЯ ржХрж░рж╛ (Gemini-рж░ ржЬржирзНржп)
        const response = await fetch(fileLink);
        const arrayBuffer = await response.arrayBuffer();
        const buffer = Buffer.from(arrayBuffer);
        const base64Image = buffer.toString("base64");

        // ржЖржорж╛ржжрзЗрж░ ржХржоржи ржлрж╛ржВрж╢ржи ржжрж┐рзЯрзЗ ржбрж╛ржЯрж╛ ржмрзЗрж░ ржХрж░рж╛
        const jobData = await extractJobData({ image: base64Image });
        
        // ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ рж╕рзЗржн
        await dbConnect();
        jobData.platform = "Telegram Screenshot";
        const newJob = await Job.create(jobData);

        await bot.sendMessage(chatId, `тЬЕ **Job Saved from Screenshot!**\n\nЁЯУМ **Title:** ${newJob.title}\nЁЯПв **Company:** ${newJob.company}`, { parse_mode: "Markdown" });
        return NextResponse.json({ success: true });
      }

      // --- рзи. ржХржорж╛ржирзНржб рж╣рзНржпрж╛ржирзНржбрзЗрж▓ ржХрж░рж╛ (Commands) ---
      if (text) {
        
        // A. Start Command
        if (text === "/start") {
          const welcomeMsg = `ЁЯСЛ **Hello Hunter!**\n\nI can save jobs from Links, Text, or Screenshots.\n\n**Try these commands:**\n/myjobs - See last 5 saved jobs\n/today - See jobs added today`;
          await bot.sendMessage(chatId, welcomeMsg, { parse_mode: "Markdown" });
          return NextResponse.json({ success: true });
        }

        // B. My Jobs Command (Last 5 jobs)
        if (text === "/myjobs") {
          await dbConnect();
          const jobs = await Job.find().sort({ createdAt: -1 }).limit(5);
          
          if (jobs.length === 0) {
            await bot.sendMessage(chatId, "No jobs found. Send me a link to save one!");
          } else {
            let msg = "ЁЯУЛ **Last 5 Jobs:**\n\n";
            jobs.forEach((job, i) => {
              msg += `${i + 1}. **${job.title}**\n   ЁЯПв ${job.company} | ${job.status}\n\n`;
            });
            await bot.sendMessage(chatId, msg, { parse_mode: "Markdown" });
          }
          return NextResponse.json({ success: true });
        }

        // C. Today's Jobs Command
        if (text === "/today") {
          await dbConnect();
          const startOfDay = new Date();
          startOfDay.setHours(0, 0, 0, 0); // ржЖржЬржХрзЗрж░ ржжрж┐ржи рж╢рзБрж░рзБ
          
          const jobs = await Job.find({ createdAt: { $gte: startOfDay } });
          
          if (jobs.length === 0) {
            await bot.sendMessage(chatId, "You haven't applied to any jobs today. Get to work! ЁЯТк");
          } else {
            let msg = `ЁЯУЕ **Today's Activity (${jobs.length}):**\n\n`;
            jobs.forEach((job) => {
              msg += `тЬЕ **${job.title}** at ${job.company}\n`;
            });
            await bot.sendMessage(chatId, msg, { parse_mode: "Markdown" });
          }
          return NextResponse.json({ success: true });
        }

        // --- рзй. рж▓рж┐ржВржХ ржмрж╛ ржЯрзЗржХрзНрж╕ржЯ рж╕рзЗржн ржХрж░рж╛ (ржЖржЧрзЗрж░ рж▓ржЬрж┐ржХ) ---
        await bot.sendMessage(chatId, "ЁЯФО Analyzing text/link... Please wait.");
        
        let jobData;
        if (text.startsWith("http")) {
          jobData = await extractJobData({ url: text });
          jobData.postLink = text;
          // Platform detection logic (Simplified here, extractJobData usually handles basic platform)
          if(text.includes('linkedin')) jobData.platform = 'LinkedIn';
          else if(text.includes('bdjobs')) jobData.platform = 'BDJobs';
          else jobData.platform = 'Web Link';
        } else {
          jobData = await extractJobData({ text: text });
          jobData.platform = "Telegram Text";
        }

        if (jobData) {
          await dbConnect();
          const newJob = await Job.create(jobData);
          const reply = `тЬЕ **Job Saved!**\n\nЁЯУМ **Title:** ${newJob.title}\nЁЯПв **Company:** ${newJob.company}\nЁЯФЧ **Platform:** ${newJob.platform}`;
          await bot.sendMessage(chatId, reply, { parse_mode: "Markdown" });
        }
      }
    }

    return NextResponse.json({ success: true });
  } catch (error) {
    console.error("Telegram Error:", error);
    // ржПрж░рж░ рж╣рж▓рзЗ ржмржЯ ржпрзЗржи ржЪрзБржк ржирж╛ ржерж╛ржХрзЗ, рждрж╛ржЗ ржПржХржЯрж╛ ржорзЗрж╕рзЗржЬ ржжрж┐ржЪрзНржЫрж┐
    // (ржжрзНрж░рзБржд рж░рзЗрж╕ржкржирзНрж╕ ржирж╛ ржжрж┐рж▓рзЗ ржЯрзЗрж▓рж┐ржЧрзНрж░рж╛ржо ржЖржмрж╛рж░ рж░рж┐ржХрзЛрзЯрзЗрж╕рзНржЯ ржкрж╛ржарж╛рзЯ, рждрж╛ржЗ try-catch ржЬрж░рзБрж░рж┐)
    return NextResponse.json({ error: error.message }, { status: 500 });
  }
}
