ржПржЦржи рж▓рзНржпрж╛ржирзНржбрж┐ржВ ржкрзЗржЬрзЗ ржХрж╛рж░рзНржбржЧрзБрж▓рзЛ рж╕рзБржирзНржжрж░ ржХрж░рзЗ рж╕рж╛ржЬрж╛ржмрзЛред ржЬржмрзЗ ржХрзНрж▓рж┐ржХ ржХрж░рж▓рзЗ /jobs/[id] рж▓рж┐ржВржХрзЗ ржпрж╛ржмрзЗред

рждрзЛржорж╛рж░ src/app/page.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ржЯрж╛ ржжрж╛ржУ:

JavaScript
import Navbar from "@/components/Navbar";
import Link from "next/link";
import { ArrowRight, MapPin, Briefcase } from "lucide-react";

// ржбрж╛ржЯрж╛ ржЖржирж╛рж░ ржлрж╛ржВрж╢ржи
async function getRecentJobs() {
  try {
    const res = await fetch(`${process.env.NEXTAUTH_URL}/api/jobs?type=public`, { cache: 'no-store' });
    if (!res.ok) return [];
    const data = await res.json();
    return data.data || [];
  } catch (error) {
    return [];
  }
}

export default async function LandingPage() {
  const recentJobs = await getRecentJobs();

  return (
    <div className="min-h-screen bg-[#0f172a] text-white font-sans selection:bg-blue-500/30">
      <Navbar />
      
      {/* Hero Banner */}
      <div className="relative pt-32 pb-20 px-6 text-center overflow-hidden">
        {/* Background Glow */}
        <div className="absolute top-20 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-blue-600/20 blur-[120px] rounded-full pointer-events-none"></div>
        
        <div className="relative z-10 max-w-4xl mx-auto">
          <span className="inline-block py-1 px-3 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 text-sm font-medium mb-6">
            ЁЯЪА Supercharge your job hunt with AI
          </span>
          <h1 className="text-5xl md:text-7xl font-extrabold mb-6 leading-tight">
            Track Jobs. <span className="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-600">Get Hired.</span>
          </h1>
          <p className="text-xl text-gray-400 mb-10 max-w-2xl mx-auto">
            The smartest way to organize your job applications. Capture details from LinkedIn, BDJobs, or screenshots instantly.
          </p>
          
          <div className="flex justify-center gap-4">
            <Link href="/dashboard">
              <button className="bg-blue-600 hover:bg-blue-500 text-white px-8 py-4 rounded-xl font-bold text-lg transition shadow-lg shadow-blue-500/25 flex items-center gap-2">
                Start Tracking <ArrowRight size={20}/>
              </button>
            </Link>
          </div>
        </div>
      </div>

      {/* Community Activity Section (Redesigned) */}
      <div className="max-w-7xl mx-auto py-20 px-6">
        <div className="flex justify-between items-end mb-12">
          <div>
            <h2 className="text-3xl font-bold text-white mb-2">Community Activity</h2>
            <p className="text-gray-400">See where top talents are applying right now.</p>
          </div>
        </div>
        
        {recentJobs.length > 0 ? (
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {recentJobs.map((job) => (
              <Link href={`/jobs/${job._id}`} key={job._id} className="group">
                <div className="bg-gray-800/40 backdrop-blur-md border border-gray-700/50 p-6 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/60 transition-all duration-300 h-full flex flex-col justify-between relative overflow-hidden cursor-pointer">
                  
                  {/* Hover Glow Effect */}
                  <div className="absolute top-0 right-0 w-20 h-20 bg-blue-500/10 blur-2xl rounded-full group-hover:bg-blue-500/20 transition"></div>

                  <div>
                    <div className="flex justify-between items-start mb-4">
                      <div className="p-2 bg-gray-700/50 rounded-lg text-2xl">ЁЯТ╝</div>
                      <span className="text-xs font-mono text-gray-500 bg-gray-900 px-2 py-1 rounded">
                        {new Date(job.createdAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric' })}
                      </span>
                    </div>

                    <h3 className="text-xl font-bold text-white mb-1 group-hover:text-blue-400 transition line-clamp-1">
                      {job.title}
                    </h3>
                    <p className="text-gray-400 font-medium mb-4 line-clamp-1">{job.company}</p>

                    <div className="flex flex-wrap gap-2 mb-6">
                      <span className="flex items-center gap-1 text-xs text-gray-300 bg-gray-700/50 px-2 py-1 rounded">
                        <MapPin size={12} className="text-blue-400"/> {job.location || "Remote"}
                      </span>
                      <span className="flex items-center gap-1 text-xs text-gray-300 bg-gray-700/50 px-2 py-1 rounded">
                        <Briefcase size={12} className="text-purple-400"/> {job.platform || "Web"}
                      </span>
                    </div>
                  </div>

                  {/* Applicant Info (Footer) */}
                  <div className="flex items-center gap-3 pt-4 border-t border-gray-700/50 mt-auto">
                    <img 
                      src={job.applicant?.image || "https://via.placeholder.com/30"} 
                      alt="User" 
                      className="w-8 h-8 rounded-full border border-gray-600 object-cover"
                    />
                    <div className="flex-1">
                      <p className="text-xs text-gray-500">Applied by</p>
                      <p className="text-sm font-bold text-gray-300 group-hover:text-white transition">
                        {job.applicant?.name || "Anonymous"}
                      </p>
                    </div>
                    <ArrowRight size={16} className="text-gray-600 group-hover:text-blue-400 transform group-hover:translate-x-1 transition" />
                  </div>

                </div>
              </Link>
            ))}
          </div>
        ) : (
          <div className="text-center py-20 bg-gray-800/30 rounded-2xl border border-gray-800 border-dashed">
            <p className="text-gray-500 text-lg">No public activity yet. Be the first to track a job!</p>
          </div>
        )}
      </div>
    </div>
  );
}
