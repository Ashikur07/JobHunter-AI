JavaScript
import { NextResponse } from "next/server";
import TelegramBot from "node-telegram-bot-api";
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import { extractJobData } from "@/lib/gemini";

const token = process.env.TELEGRAM_BOT_TOKEN;
const bot = new TelegramBot(token);

export async function POST(request) {
  try {
    const body = await request.json();
    
    if (body.message) {
      const { chat, text } = body.message;
      const chatId = chat.id;

      if (text) {
        // рзз. ржЗржЙржЬрж╛рж░ржХрзЗ ржУрзЯрзЗржЯрж┐ржВ ржорзЗрж╕рзЗржЬ ржжрзЗржУрзЯрж╛
        await bot.sendMessage(chatId, "ЁЯФО Analyzing your job link/text... Please wait.");

        let jobData;
        
        // рзи. ржЪрзЗржХ ржХрж░рж┐ ржПржЯрж╛ рж▓рж┐ржВржХ ржХрж┐ржирж╛
        if (text.startsWith("http")) {
          // рж▓рж┐ржВржХ рж╣рж▓рзЗ ZenRows ржжрж┐рзЯрзЗ ржбрж╛ржЯрж╛ ржЖржиржмрзЗ (lib/gemini.js ржмрзНржпржмрж╣рж╛рж░ ржХрж░рзЗ)
          jobData = await extractJobData({ url: text });
          
          // --- ржирждрзБржи рж▓ржЬрж┐ржХ: рж▓рж┐ржВржХ ржПржмржВ ржкрзНрж▓рзНржпрж╛ржЯржлрж░рзНржо рж╕рзЗржЯ ржХрж░рж╛ ---
          jobData.postLink = text;
          
          const lowerLink = text.toLowerCase();
          if (lowerLink.includes("linkedin")) jobData.platform = "LinkedIn";
          else if (lowerLink.includes("bdjobs")) jobData.platform = "BDJobs";
          else if (lowerLink.includes("glassdoor")) jobData.platform = "Glassdoor";
          else jobData.platform = "Web (Telegram)";
          
        } else {
          // ржЯрзЗржХрзНрж╕ржЯ рж╣рж▓рзЗ рж╕рж░рж╛рж╕рж░рж┐ ржкрзНрж░рж╕рзЗрж╕
          jobData = await extractJobData({ text: text });
          jobData.platform = "Telegram Text";
        }

        if (jobData) {
          // рзй. ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ рж╕рзЗржн ржХрж░рж╛
          await dbConnect();
          
          const newJob = await Job.create(jobData);

          // рзк. рж╕рж╛ржХрж╕рзЗрж╕ ржорзЗрж╕рзЗржЬ ржкрж╛ржарж╛ржирзЛ
          const reply = `тЬЕ **Job Saved!**\n\nЁЯУМ **Title:** ${newJob.title}\nЁЯПв **Company:** ${newJob.company}\nЁЯФЧ **Platform:** ${newJob.platform}\n\nCheck your dashboard!`;
          await bot.sendMessage(chatId, reply, { parse_mode: "Markdown" });
        }
      } else {
        await bot.sendMessage(chatId, "Send me a Job Link or Description Text!");
      }
    }

    return NextResponse.json({ success: true });
  } catch (error) {
    console.error("Telegram Error:", error);
    return NextResponse.json({ error: error.message }, { status: 500 });
  }
}
