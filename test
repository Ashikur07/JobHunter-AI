рждрзЛржорж╛рж░ src/models/Job.js ржлрж╛ржЗрж▓рзЗ ржПржЗ ржирждрзБржи ржХрзЛржбржЯрж╛ ржжрж╛ржУред ржПржЦрж╛ржирзЗ рждрзЛржорж╛рж░ ржЪрж╛ржУрзЯрж╛ рж╕ржм ржбрж┐ржЯрзЗржЗрж▓рж╕ ржлрж┐рж▓рзНржб ржЖржЫрзЗред

JavaScript
// src/models/Job.js
import mongoose from 'mongoose';

const JobSchema = new mongoose.Schema({
  // Basic Info (AI Extracted)
  title: { type: String, required: true },
  company: { type: String, required: true },
  location: { type: String },
  salary: { type: String },
  description: { type: String },
  
  // Tracking Details
  postLink: { type: String },
  platform: { type: String, default: 'Unknown' }, // LinkedIn, BDJobs
  applicationDate: { type: Date, default: Date.now },
  status: { 
    type: String, 
    enum: ['Applied', 'Screening', 'Interview', 'Offer', 'Rejected'], 
    default: 'Applied' 
  },

  // Interview & Contact
  interviewDate: { type: Date },
  contactPerson: { type: String }, // HR Name
  contactEmail: { type: String }, // Phone/Email
  
  // Personal Feedback
  salaryExpectation: { type: String },
  feedback: { type: String },
  notes: { type: String },
  
  createdAt: { type: Date, default: Date.now },
});

export default mongoose.models.Job || mongoose.model('Job', JobSchema);
