import mongoose from 'mongoose';

const UserSchema = new mongoose.Schema({
  name: { type: String, required: true },
  email: { type: String, required: true, unique: true },
  password: { type: String },
  image: { type: String },
  
  // --- ржирждрзБржи ржлрж┐рж▓рзНржбржЧрзБрж▓рзЛ ржЕржмрж╢рзНржпржЗ ржерж╛ржХрждрзЗ рж╣ржмрзЗ ---
  bio: { type: String, default: "" },
  location: { type: String, default: "" },
  phone: { type: String, default: "" },
  
  // рж▓рж┐ржВржХржЧрзБрж▓рзЛ ржПржХржЯрж╛ ржЕржмржЬрзЗржХрзНржЯрзЗрж░ ржнрзЗрждрж░ ржерж╛ржХржмрзЗ
  links: {
    linkedin: { type: String, default: "" },
    github: { type: String, default: "" },
    portfolio: { type: String, default: "" },
    facebook: { type: String, default: "" }
  },

  // ржнрзЗрж░рж┐ржлрж┐ржХрзЗрж╢ржи ржлрж┐рж▓рзНржбрж╕
  isVerified: { type: Boolean, default: false },
  verifyToken: { type: String },
  verifyTokenExpiry: { type: Date },

  createdAt: { type: Date, default: Date.now },
});

export default mongoose.models.User || mongoose.model('User', UserSchema);
