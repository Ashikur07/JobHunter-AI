src/components/JobTable.js (Balanced & Clean)
JavaScript
export default function JobTable({ jobs, onViewDetails }) {
  return (
    <div className="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden shadow-xl">
      <table className="w-full text-left border-collapse">
        <thead>
          <tr className="bg-gray-900 text-gray-400 text-xs uppercase tracking-wider">
            {/* SL: ржПржХржжржо ржЫрзЛржЯ ржЬрж╛рзЯржЧрж╛ */}
            <th className="p-4 border-b border-gray-700 w-10 text-center">SL</th>
            
            {/* Date: ржлрж┐ржХрзНрж╕ржб рж╕рж╛ржЗржЬ ржПржмржВ ржПржХ рж▓рж╛ржЗржи */}
            <th className="p-4 border-b border-gray-700 w-32 whitespace-nowrap">Applied Date</th>
            
            {/* Title: ржмрзЬ ржЬрж╛рзЯржЧрж╛ ржХрж┐ржирзНрждрзБ рж▓рж┐ржорж┐ржЯрзЗржб */}
            <th className="p-4 border-b border-gray-700 max-w-[200px]">Role / Title</th>
            
            {/* Company: ржорж┐ржбрж┐рзЯрж╛ржо ржЬрж╛рзЯржЧрж╛ */}
            <th className="p-4 border-b border-gray-700 w-1/4">Company</th>
            
            {/* Status: ржлрж┐ржХрзНрж╕ржб ржЫрзЛржЯ ржЬрж╛рзЯржЧрж╛ */}
            <th className="p-4 border-b border-gray-700 w-28 text-center">Status</th>
            
            {/* Action: ржлрж┐ржХрзНрж╕ржб ржЫрзЛржЯ ржЬрж╛рзЯржЧрж╛ */}
            <th className="p-4 border-b border-gray-700 w-20 text-right">Action</th>
          </tr>
        </thead>
        <tbody className="text-sm text-gray-300">
          {jobs.map((job, index) => (
            <tr key={job._id} className="hover:bg-gray-700/50 transition border-b border-gray-700/50 last:border-0">
              
              {/* SL */}
              <td className="p-4 text-center text-gray-500">{index + 1}</td>
              
              {/* Date: whitespace-nowrap ржжрж┐рзЯрзЗ ржПржХ рж▓рж╛ржЗржирзЗ рж░рж╛ржЦрж╛ рж╣рзЯрзЗржЫрзЗ */}
              <td className="p-4 text-gray-400 whitespace-nowrap">
                {new Date(job.applicationDate).toLocaleDateString()}
              </td>
              
              {/* Role: truncate ржХрзНрж▓рж╛рж╕ ржжрж┐рзЯрзЗ ... ржХрж░рж╛ рж╣рзЯрзЗржЫрзЗ */}
              <td className="p-4 font-bold text-white max-w-[200px]" title={job.title}>
                <div className="truncate">
                  {job.title}
                </div>
              </td>
              
              {/* Company: ржПржЯрж╛ржУ truncate ржХрж░рж╛ рж╣рзЯрзЗржЫрзЗ ржпрж╛рждрзЗ ржнрзЗржЩрзЗ ржирж╛ ржпрж╛рзЯ */}
              <td className="p-4 text-blue-300 max-w-[150px]" title={job.company}>
                <div className="truncate">
                  {job.company}
                </div>
              </td>
              
              {/* Status */}
              <td className="p-4 text-center">
                <span className={`px-2 py-1 rounded-full text-[10px] uppercase font-bold tracking-wide ${
                  job.status === 'Applied' ? 'bg-blue-500/10 text-blue-400 border border-blue-500/20' : 
                  job.status === 'Interview' ? 'bg-yellow-500/10 text-yellow-400 border border-yellow-500/20' : 
                  job.status === 'Offer' ? 'bg-green-500/10 text-green-400 border border-green-500/20' : 
                  job.status === 'Rejected' ? 'bg-red-500/10 text-red-400 border border-red-500/20' : 
                  'bg-gray-700 text-gray-400'
                }`}>
                  {job.status}
                </span>
              </td>
              
              {/* Action */}
              <td className="p-4 text-right">
                <button 
                  onClick={() => onViewDetails(job)}
                  className="text-xs bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded border border-gray-600 transition whitespace-nowrap"
                >
                  Details
                </button>
              </td>
            </tr>
          ))}
          
          {jobs.length === 0 && (
            <tr><td colSpan="6" className="p-8 text-center text-gray-500">No jobs found.</td></tr>
          )}
        </tbody>
      </table>
    </div>
  );
}
