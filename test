import { NextResponse } from "next/server";

const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

export async function GET() {
  try {
    // ржЧрзБржЧрж▓рзЗрж░ ржХрж╛ржЫрзЗ ржоржбрзЗрж▓рзЗрж░ рж▓рж┐рж╕рзНржЯ ржЪрж╛ржЗржЫрж┐
    const modelGeneric = genAI.getGenerativeModel({ model: "gemini-pro" }); 
    // (ржПржЦрж╛ржирзЗ model ржирж╛ржоржЯрж╛ ржорзНржпрж╛ржЯрж╛рж░ ржХрж░рзЗ ржирж╛, ржЖржорж░рж╛ ржЬрж╛рж╕рзНржЯ ржХрзНрж▓рж╛ржпрж╝рзЗржирзНржЯ ржЗржирж┐рж╢рж┐ржпрж╝рзЗржЯ ржХрж░ржЫрж┐)
    
    // ржПржЗ рж╣рзНржпрж╛ржХржЯрж╛ ржжрж┐ржпрж╝рзЗ ржЖржорж░рж╛ рж╕рж░рж╛рж╕рж░рж┐ ржоржбрзЗрж▓ рж▓рж┐рж╕рзНржЯ ржЪрзЗржХ ржХрж░ржмрзЛ ржпржжрж┐ рж▓рж╛ржЗржмрзНрж░рзЗрж░рж┐ рж╕рж╛ржкрзЛрж░рзНржЯ ржХрж░рзЗ, 
    // ржЕржержмрж╛ ржЖржорж░рж╛ ржПржХржЯрж╛ рж╕рж┐ржорзНржкрж▓ ржЯрзЗрж╕рзНржЯ ржХрж░ржмрзЛред
    
    // ржпрзЗрж╣рзЗрждрзБ library рждрзЗ рж╕рж░рж╛рж╕рж░рж┐ listModels ржлрж╛ржВрж╢ржи ржПржХрзНрж╕ржкрзЛржЬ ржХрж░рж╛ ржирзЗржЗ ржЕржирзЗржХ ржнрж╛рж░рзНрж╕ржирзЗ,
    // рждрж╛ржЗ ржЖржорж░рж╛ 'gemini-1.5-flash' ржжрж┐рзЯрзЗ ржПржХржЯрж╛ 'Hello' ржкрж╛ржарж┐рзЯрзЗ ржжрзЗржЦржмрзЛ рж░рзЗрж╕ржкржирзНрж╕ ржХрзА ржЖрж╕рзЗред
    
    const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash" });
    const result = await model.generateContent("Hello");
    const response = await result.response;
    
    return NextResponse.json({ 
      success: true, 
      message: "Gemini 1.5 Flash is working!", 
      data: response.text() 
    });

  } catch (error) {
    return NextResponse.json({ 
      success: false, 
      error: error.message,
      fullError: JSON.stringify(error)
    }, { status: 500 });
