рждрзЛржорж╛рж░ src/components/JobModal.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ржЯрж╛ ржжрж╛ржУред ржПржмрж╛рж░ рззрзжрзж% ржХрж╛ржЬ ржХрж░ржмрзЗред

src/components/JobModal.js (Fixed)
