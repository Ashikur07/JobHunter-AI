рзз. src/app/api ржлрзЛрж▓рзНржбрж╛рж░рзЗрж░ ржнрзЗрждрж░ jobs ржирж╛ржорзЗ ржПржХржЯрж╛ ржлрзЛрж▓рзНржбрж╛рж░ ржмрж╛ржирж╛ржУред рзи. jobs ржПрж░ ржнрзЗрждрж░ route.js ржирж╛ржорзЗ ржлрж╛ржЗрж▓ ржмрж╛ржирж╛ржУред рж▓рзЛржХрзЗрж╢ржи: src/app/api/jobs/route.js

ржирж┐ржЪрзЗрж░ ржХрзЛржбржЯрж╛ ржкрзЗрж╕рзНржЯ ржХрж░рзЛ:

JavaScript
import dbConnect from "@/lib/mongodb";
import Job from "@/models/Job";
import { NextResponse } from "next/server";

export async function POST(request) {
  try {
    // 1. Connect to Database
    await dbConnect();

    // 2. Get Data from Frontend
    const jobData = await request.json();

    // 3. Create a new Job in Database
    const newJob = await Job.create(jobData);

    return NextResponse.json({ success: true, data: newJob }, { status: 201 });

  } catch (error) {
    console.error("Error saving job:", error);
    return NextResponse.json({ success: false, error: error.message }, { status: 500 });
  }
}
ржзрж╛ржк рзи: "Save Job" ржмрж╛ржЯржи ржпрзЛржЧ ржХрж░рж╛ (Frontend)
ржПржЦржи ржЖржорж░рж╛ ржлрзНрж░ржирзНржЯржПржирзНржбрзЗ ржПржХржЯрж╛ ржмрж╛ржЯржи ржжрзЗржм, ржпрж╛рждрзЗ ржПржХрзНрж╕ржЯрзНрж░рж╛ржХрзНржЯ ржХрж░рж╛рж░ ржкрж░ рждрзБржорж┐ "Save to Database" ржХрзНрж▓рж┐ржХ ржХрж░рж▓рзЗржЗ рж╕рзЗржЯрж╛ рж╕рзЗржн рж╣рзЯрзЗ ржпрж╛рзЯред

рждрзЛржорж╛рж░ src/app/page.js ржлрж╛ржЗрж▓рзЗрж░ ржкрзБрж░рзЛ ржХрзЛржбржЯрж╛ ржорзБржЫрзЗ ржПржЯрж╛ ржкрзЗрж╕рзНржЯ ржХрж░рзЛ (ржЖржорж┐ рж╕рзЗржн ржХрж░рж╛рж░ ржлрж╛ржВрж╢ржи ржпрзЛржЧ ржХрж░рзЗ ржжрж┐рзЯрзЗржЫрж┐):

JavaScript
"use client";
import { useState } from "react";

export default function Home() {
  const [input, setInput] = useState("");
  const [result, setResult] = useState(null);
  const [loading, setLoading] = useState(false);
  const [saving, setSaving] = useState(false); // рж╕рзЗржн рж╣ржЪрзНржЫрзЗ ржХрж┐ржирж╛ ржжрзЗржЦрж╛рж░ ржЬржирзНржп

  // 1. Extract Function
  const handleExtract = async () => {
    if (!input) return;
    setLoading(true);
    setResult(null);

    try {
      const res = await fetch("/api/extract", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ text: input }),
      });
      const data = await res.json();
      if (data.success) {
        setResult(data.data);
      } else {
        alert("Failed to extract data!");
      }
    } catch (error) {
      console.error("Error:", error);
    } finally {
      setLoading(false);
    }
  };

  // 2. Save Function (NEW)
  const handleSave = async () => {
    if (!result) return;
    setSaving(true);

    try {
      const res = await fetch("/api/jobs", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(result),
      });
      const data = await res.json();
      
      if (data.success) {
        alert("Job Saved Successfully! ЁЯОЙ");
        setInput(""); // ржЗржиржкрзБржЯ ржХрзНрж▓рж┐рзЯрж╛рж░ ржХрж░рзЗ ржжрж┐рж▓рж╛ржо
        setResult(null); // рж░рзЗржЬрж╛рж▓рзНржЯ ржХрзНрж▓рж┐рзЯрж╛рж░ ржХрж░рзЗ ржжрж┐рж▓рж╛ржо
      } else {
        alert("Failed to save job.");
      }
    } catch (error) {
      console.error("Error saving:", error);
    } finally {
      setSaving(false);
    }
  };

  return (
    <div className="min-h-screen bg-gray-900 text-white p-10 flex flex-col items-center">
      <h1 className="text-3xl font-bold mb-6">Job Hunter AI ЁЯХ╡я╕ПтАНтЩВя╕П</h1>
      
      <div className="w-full max-w-2xl">
        <textarea
          className="w-full p-4 bg-gray-800 rounded-lg border border-gray-700 focus:outline-none focus:border-blue-500 text-white"
          rows="6"
          placeholder="Paste Job Description Here..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        ></textarea>

        <button
          onClick={handleExtract}
          disabled={loading}
          className="mt-4 w-full bg-blue-600 hover:bg-blue-700 py-3 rounded-lg font-bold transition disabled:opacity-50"
        >
          {loading ? "Extracting Info..." : "Extract Job Data ЁЯЪА"}
        </button>

        {/* Result Section */}
        {result && (
          <div className="mt-8 bg-gray-800 p-6 rounded-lg border border-green-500 animate-fadeIn">
            <h2 className="text-xl font-bold text-green-400 mb-4">Success! Extracted Data:</h2>
            <div className="grid grid-cols-1 gap-2 text-gray-300 mb-6">
              <p><strong className="text-white">Title:</strong> {result.title}</p>
              <p><strong className="text-white">Company:</strong> {result.company}</p>
              <p><strong className="text-white">Location:</strong> {result.location}</p>
              <p><strong className="text-white">Salary:</strong> {result.salary || "Not mentioned"}</p>
              <p><strong className="text-white">Summary:</strong> {result.description}</p>
            </div>

            {/* Save Button (NEW) */}
            <button
              onClick={handleSave}
              disabled={saving}
              className="w-full bg-green-600 hover:bg-green-700 py-3 rounded-lg font-bold transition disabled:opacity-50"
            >
              {saving ? "Saving to Database..." : "Save to Database ЁЯТ╛"}
            </button>
          </div>
        )}
      </div>
    </div>
  );
}
ржХрж╛ржЬ: рзз. ржлрж╛ржЗрж▓ ржжрзБржЯрзЛ ржЖржкржбрзЗржЯ ржХрж░рзЗ рж╕рзЗржн ржХрж░рзЛред рзи. ржЖржмрж╛рж░ ржЬржмрзЗрж░ ржЯрзЗржХрзНрж╕ржЯ ржкрзЗрж╕рзНржЯ ржХрж░рзЗ Extract ржХрж░рзЛред рзй. рждрж╛рж░ржкрж░ ржирж┐ржЪрзЗ рж╕ржмрзБржЬ рж░ржЩрзЗрж░ "Save to Database" ржмрж╛ржЯржи ржЖрж╕ржмрзЗред ржУржЯрж╛рждрзЗ ржХрзНрж▓рж┐ржХ ржХрж░рзЛред рзк. ржпржжрж┐ Job Saved Successfully! ржЕрзНржпрж╛рж▓рж╛рж░рзНржЯ ржЖрж╕рзЗ, рждрж╛рж░ржорж╛ржирзЗ ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ ржбрж╛ржЯрж╛ ржврзБржХрзЗ ржЧрзЗржЫрзЗ!

