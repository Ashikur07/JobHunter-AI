ржкрзБрж░рзЛ ржХрзЛржб ржорзБржЫрзЗ ржирж┐ржЪрзЗрж░ржЯрж╛ ржжрж╛ржУ:

JavaScript
import dbConnect from "@/lib/mongodb";
import User from "@/models/User";
import { NextResponse } from "next/server";

export async function GET(request) {
  const { searchParams } = new URL(request.url);
  const token = searchParams.get("token");

  // ржЯрзЛржХрзЗржи ржирж╛ ржерж╛ржХрж▓рзЗ рж▓ржЧ-ржЗржи ржкрзЗржЬрзЗ ржПрж░рж░рж╕рж╣ ржкрж╛ржарж╛ржмрзЛ
  if (!token) {
    return NextResponse.redirect(new URL("/signin?error=TokenMissing", request.url));
  }

  await dbConnect();

  const user = await User.findOne({
    verifyToken: token,
    verifyTokenExpiry: { $gt: Date.now() },
  });

  if (!user) {
    // тЪая╕П ржлрж┐ржХрзНрж╕: ржХрж╛рж▓рзЛ JSON рж╕рзНржХрзНрж░рж┐ржи ржирж╛ ржжрзЗржЦрж┐рзЯрзЗ, рж▓ржЧ-ржЗржи ржкрзЗржЬрзЗ ржПрж░рж░ ржорзЗрж╕рзЗржЬрж╕рж╣ ржкрж╛ржарж╛ржЪрзНржЫрж┐
    return NextResponse.redirect(new URL("/signin?error=InvalidToken", request.url));
  }

  // ржнрзЗрж░рж┐ржлрж╛ржЗ ржХрж░рж╛
  user.isVerified = true;
  user.verifyToken = undefined;
  user.verifyTokenExpiry = undefined;
  await user.save();

  // рж╕ржлрж▓ рж╣рж▓рзЗ рж▓ржЧ-ржЗржи ржкрзЗржЬрзЗ рж╕рж╛ржХрж╕рзЗрж╕ ржорзЗрж╕рзЗржЬрж╕рж╣ ржкрж╛ржарж╛ржирзЛ
  return NextResponse.redirect(new URL("/signin?verified=true", request.url));
}
